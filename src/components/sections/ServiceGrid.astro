---
import Icon from "@ui/icons/Icon.astro";

const title =
  'Why Choose <span class="text-teal-700">Wish</span><span class="font-normal text-slate-400">yor</span>?';
const subTitle =
  "Partner with a technology leader that transforms businesses through innovative digital solutions. From enterprise-grade applications to cutting-edge cloud services, Wishyor delivers excellence that drives your business forward with confidence.";

const services = [
  {
    borderClasses: "md:border-l md:border-r",
    gradientClasses: "bg-linear-to-l/oklch from-teal-200 to-transparent",
    icon: "cursorRays",
    heading: "Enterprise Solutions",
    description:
      "Leverage our enterprise-grade technology solutions built for scale. Whether you're a growing startup or an established corporation, our solutions adapt to your business needs while maintaining peak performance.",
  },
  {
    borderClasses: "border-b border-t md:border-b-0",
    gridClasses: "md:col-start-2 md:col-end-3",
    gradientClasses: "bg-linear-to-t/oklch from-teal-200 to-transparent",
    icon: "cog",
    heading: "Digital Innovation",
    description:
      "Stay ahead with our cutting-edge digital transformation services. From AI-powered solutions to cloud infrastructure, we help you embrace the future of technology while driving measurable business outcomes.",
  },
  {
    borderClasses: "md:border-l md:border-r md:border-t",
    gridClasses: "md:col-end-4",
    gradientClasses: "bg-linear-to-tl/oklch from-teal-200 to-transparent",
    icon: "puzzle",
    heading: "Seamless Integration",
    description:
      "Experience smooth integration of our solutions with your existing infrastructure. Our expert team ensures minimal disruption while maximizing the impact of your technology investments.",
  },
];
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
  aria-labelledby="services-heading"
>
  <div
    class="grid grid-flow-row-dense grid-cols-1 md:grid-cols-3 md:grid-rows-2"
  >
    <div
      class="mx-auto max-w-lg pb-5 text-center md:col-span-2 lg:mx-0 lg:flex-auto lg:text-left"
    >
      <h2
        id="services-heading"
        class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
      >
        <Fragment set:html={title} />
      </h2>
      <p
        class="mt-6 text-start text-lg/8 text-pretty text-slate-700 sm:text-center md:text-start"
      >
        {subTitle}
      </p>
    </div>

    {/* Service Cards */}
    {
      services.map((service) => (
        <div
          class={`group relative mx-auto flex flex-col border-dashed border-slate-400 py-10 ${service.borderClasses} ${service.gridClasses}`}
          role="article"
        >
          <div
            class={`group pointer-events-none absolute inset-0 h-full w-full ${service.gradientClasses} opacity-0 transition duration-300 group-hover:opacity-100`}
          />
          <div class="relative z-10 mb-4 px-10">
            <Icon name={service.icon} aria-hidden="true" />
          </div>
          <h3 class="relative z-10 mb-2 px-10 text-lg font-semibold">
            <span class="inline-block text-balance text-slate-800 transition duration-300 group-hover:translate-x-2">
              {service.heading}
            </span>
          </h3>
          <p class="z-10 max-w-sm px-4 text-sm text-pretty text-slate-700 sm:max-w-lg md:mx-auto">
            {service.description}
          </p>
        </div>
      ))
    }
  </div>
</section>