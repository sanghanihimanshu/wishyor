---
import { Image } from "astro:assets";
import image_1 from "@images/connection.png";
import image_2 from "@images/fullStack.png";
import image_3 from "@images/Cloud.png";

// Content for the section title and subtitle
const title = `<span class="text-teal-700">Tech</span><span class="font-normal text-slate-400">Solutions</span> Enterprise Suite`;
const subTitle = `Accelerate your business with our enterprise-grade technology solutions. From custom software to cloud infrastructure, we deliver scalable solutions that drive innovation.`;

// Services list for displaying the key highlights

const services = [
  {
    title: "Enterprise Integration",
    description:
      "Seamlessly connect your systems with our enterprise-grade integration solutions and APIs",
    image: image_1,
    class: "content-center border-b border-dashed border-slate-400 py-5 sm:col-span-2 sm:p-5",
    alignment: "mx-auto mt-10 rounded-xl shadow-lg sm:w-[50%]",
  },
  {
    title: "Full-Stack Development",
    description: `Leverage our expertise in <span class="font-bold">15+</span> technologies and <span class="font-bold">200+</span> successful projects to build robust applications.`,
    image: image_2,
    class: "content-center py-5 sm:row-start-2 sm:p-5 sm:py-10",
    alignment: "ml-auto mr-auto mt-10 w-[65%] rounded-xl shadow-lg sm:ml-0 sm:w-[45%]",
  },
  {
    title: "Cloud Solutions",
    description:
      "Modern cloud architecture with automated scaling, monitoring, and enterprise-grade security implementations.",
    image: image_3,
    class:
      "content-center border-t border-dashed border-slate-400 py-5 sm:row-span-2 sm:row-start-2 sm:border-l sm:border-t-0 sm:p-5 sm:text-right",
    alignment: "ml-auto mr-auto mt-10 w-[80%] rounded-xl shadow-lg sm:mr-0",
  },
  {
    title: "Additional Services",
    class: "content-center border-t border-dashed border-slate-400 py-5 sm:p-5",
    moreFeatures: [
      "24/7 technical support and maintenance services",
      "Custom software development and system modernization",
      "DevOps implementation and cloud migration services",
      "Cybersecurity and compliance solutions",
    ],
  },
];

// Optionally add export const seo = { ... } if this is a landing/standalone page
---

<div lang="en" class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20">
  {/* Section container for the title and subtitle */}
  <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
    <h2 class="text-balance text-2xl font-semibold text-slate-800 md:text-3xl md:leading-tight">
      <Fragment set:html={title} />
    </h2>
    <p class="mt-1 text-pretty text-slate-600">
      <Fragment set:html={subTitle} />
    </p>
  </div>

  <div
    class="mx-auto grid max-w-[85rem] px-4 pb-10 sm:grid-cols-2 sm:grid-rows-3 sm:px-6 lg:px-8 lg:pb-14"
  >
    {
      services.map((service) => (
        <div class={`${service.class}`}>
          <h2 class="text-2xl font-bold text-slate-600">{service.title}</h2>

          <p class="mt-2 text-base/6 text-slate-600">
            <Fragment set:html={service.description || ""} />
          </p>

          {service.image && (
            <Image class={`${service.alignment || ""}`} src={service.image} alt="" />
          )}

          {service.moreFeatures && (
            <ul class="ml-4 mt-4 w-4/5 list-inside list-disc space-y-2 text-base/6 text-slate-600 marker:text-teal-600">
              {service.moreFeatures.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </div>
</div>
