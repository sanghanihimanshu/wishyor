---
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { WithContext, Thing } from "schema-dts";
import Cta from "@/components/service/cta.astro";

const platform = {
  title: "UI/UX Design Services",
  description:
    "Elevate your digital presence with our user-centered UI/UX design services. We create intuitive, accessible, and engaging digital experiences that convert visitors into loyal customers and boost your business performance.",
};

const video =
  "https://vyclk3sx0z.ufs.sh/f/hv6ttNERWpXuOGj0KhIPk5MLw0bimBlYnq6Vd2NfSJW9gCQU";

const responsiveDesignSection = {
  title: "Responsive Interface Design",
  description:
    "Create seamless digital experiences across all devices with our responsive interface design solutions. We craft visually stunning, consistent, and accessible interfaces that adapt perfectly to any screen size, ensuring your users enjoy optimal experiences whether on desktop, tablet, or mobile.",
  features: [
    "Device-agnostic design approach for consistent user experiences",
    "Performance-optimized interfaces that load quickly on all devices",
    "Accessible design practices ensuring compliance with WCAG guidelines",
    "Visually cohesive design systems that reinforce your brand identity",
  ],
};

const wireframePrototypeSection = {
  title: "Wireframing & Prototyping",
  description:
    "Visualize your ideas and validate concepts before full development with our comprehensive wireframing and prototyping services. We create detailed blueprints and interactive prototypes that allow stakeholders to experience the user journey, test functionality, and refine concepts with minimal investment.",
  features: [
    "Low and high-fidelity wireframes to map information architecture",
    "Interactive prototypes that simulate real user experiences",
    "User flow mapping to optimize navigation and conversion paths",
    "Collaborative revision processes with stakeholder feedback integration",
  ],
};

// SEO metadata
const seo = {
  title: "UI/UX Design Services | Responsive Design, Wireframing & Prototyping",
  description:
    "Transform your digital presence with our expert UI/UX design services. Professional responsive interface design, wireframing, and prototyping that drives engagement and conversions.",
};

const designFoundationSection = {
  title: "UI/UX Design Foundation",
  description:
    "We help organizations build robust design systems that serve as the foundation for cohesive user experiences across all digital touchpoints. Our approach ensures scalability, consistency, and efficiency in your UI/UX implementation.",
};

const designElements = [
  "Typography Systems",
  "Color Palettes",
  "Component Libraries",
  "Grid Systems",
  "Interaction Patterns",
];

const designProcesses = [
  "User Research",
  "Persona Development",
  "Journey Mapping",
  "Usability Testing",
  "Heuristic Evaluation",
];

const designTools = ["Figma", "Adobe XD", "Sketch", "InVision", "Principle"];

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "UI/UX Design Services",
  description:
    "Professional UI/UX design services including responsive interface design, wireframing, and prototyping for engaging digital experiences.",
  provider: {
    "@type": "Organization",
    name: "Wishyor",
    url: `${Astro.site}`,
  },
  areaServed: "Worldwide",
  serviceType: "UI/UX Design",
};

const businessBenefits = {
  title: "Why Invest in UI/UX Design",
  benefits: [
    {
      title: "Increased Conversion Rates",
      description:
        "Intuitive interfaces and clear user journeys reduce friction and boost conversion rates across your digital platforms.",
      icon: "chartBar",
    },
    {
      title: "Enhanced User Satisfaction",
      description:
        "User-centered design creates memorable experiences that increase satisfaction, retention, and brand loyalty.",
      icon: "heart",
    },
    {
      title: "Reduced Development Costs",
      description:
        "Identifying and resolving UX issues early in the design process prevents costly revisions during development.",
      icon: "dollarSign",
    },
    {
      title: "Competitive Differentiation",
      description:
        "Stand out in crowded markets with distinctive, intuitive interfaces that showcase your brand's unique personality.",
      icon: "trophy",
    },
    {
      title: "Improved Accessibility",
      description:
        "Inclusive design practices expand your market reach and ensure compliance with accessibility standards.",
      icon: "users",
    },
    {
      title: "Data-Informed Decision Making",
      description:
        "User research and testing provides actionable insights that drive continuous experience improvements.",
      icon: "barChart",
    },
  ],
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1
          class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
        >
          {platform.title}
        </h1>
        <p
          class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8"
        >
          {platform.description}
        </p>
      </div>

      <div class="relative m-auto w-full pt-16 sm:w-[90%]">
        <div
          class="via-off-white to-off-white pointer-events-none absolute inset-x-0 -bottom-2 z-10 hidden h-1/3 w-full bg-linear-to-b/oklch from-transparent sm:block"
        >
        </div>
        <div class="aspect-video">
          <video
            autoplay
            loop
            muted
            playsinline
            preload="metadata"
            class="aspect-auto rounded-xl"
          >
            <source src={video} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="responsive-interface-design"
  >
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {responsiveDesignSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {responsiveDesignSection.description}
        </p>
        <div class="mt-8 flex flex-col gap-4">
          {
            responsiveDesignSection.features.map((feature) => (
              <div class="flex items-center gap-2">
                <Icon name="checkCircle" />
                <p class="text-slate-600">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>
      <div
        class="relative flex flex-col items-center justify-center gap-8 rounded-xl p-6 md:flex-row lg:gap-16"
      >
        <div class="flex items-center justify-center w-full h-full">
          <div class="relative flex h-96 w-96 items-center justify-center">
            <div
              class="animate-float-desktop absolute z-30 h-40 w-56 overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-500"
            >
              <div
                class="relative mx-auto my-4 h-32 w-52 bg-gradient-to-br from-indigo-100 to-indigo-300"
              >
              </div>
            </div>
            <div
              class="animate-float-tablet absolute top-10 left-12 z-20 h-44 w-32 overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-500"
            >
              <div
                class="relative mx-auto my-4 h-36 w-28 bg-gradient-to-br from-indigo-100 to-indigo-300"
              >
              </div>
            </div>
            <div
              class="animate-float-mobile absolute top-20 left-56 z-10 h-36 w-20 overflow-hidden rounded-lg bg-white shadow-lg transition-all duration-500"
            >
              <div
                class="relative mx-auto my-3 h-30 w-16 bg-gradient-to-br from-indigo-100 to-indigo-300"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="wireframe-and-prototyping"
  >
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="order-last md:order-first">
        <div
          class="wireframe-prototype-animation perspective-1000 relative mx-auto h-96 w-96"
        >
          <div
            class="animate-flip absolute top-1/2 left-1/2 h-64 w-80 -translate-x-1/2 -translate-y-1/2 overflow-hidden rounded-lg bg-white shadow-lg backface-hidden"
          >
            <div class="h-10 border-b border-slate-200 bg-slate-100"></div>
            <div class="h-44 p-6">
              <div class="float-left mr-6 h-28 w-28 bg-slate-200"></div>
              <div class="overflow-hidden pt-3">
                <div class="mb-3 h-4 bg-slate-200"></div>
                <div class="mb-3 h-4 bg-slate-200"></div>
                <div class="mb-3 h-4 bg-slate-200"></div>
              </div>
            </div>
            <div class="h-6 border-t border-slate-200 bg-slate-100"></div>
          </div>
          <div
            class="animate-flip-delay absolute top-1/2 left-1/2 h-64 w-80 -translate-x-1/2 -translate-y-1/2 overflow-hidden rounded-lg bg-white shadow-lg backface-hidden"
          >
            <div class="h-10 border-b border-slate-200 bg-slate-100"></div>
            <div class="h-44 p-6">
              <div
                class="float-left mr-4 h-24 w-24 rounded bg-gradient-to-br from-blue-200 to-blue-400"
              >
              </div>
              <div class="overflow-hidden pt-1">
                <div class="mb-2 h-4 w-4/6 rounded bg-blue-500"></div>
                <div class="mb-2 h-2 rounded bg-blue-200"></div>
                <div class="mb-2 h-2 w-5/6 rounded bg-blue-200"></div>
              </div>
            </div>
            <div class="h-6 border-t border-slate-200 bg-slate-100"></div>
          </div>
        </div>
      </div>
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {wireframePrototypeSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {wireframePrototypeSection.description}
        </p>
        <div class="mt-8 flex flex-col gap-4">
          {
            wireframePrototypeSection.features.map((feature) => (
              <div class="flex items-center gap-2">
                <Icon name="checkCircle" />
                <p class="text-slate-600">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="design-foundation"
  >
    <div
      class="mt-2 grid grid-cols-1 gap-4 md:grid-cols-2 md:justify-items-end"
    >
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {designFoundationSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {designFoundationSection.description}
        </p>
      </div>

      <div class="h-full w-full">
        <div
          class="relative flex h-full flex-col justify-center rounded-lg py-8 ring-white/15"
        >
          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--duration:30s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                designElements.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                designElements.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>

          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--direction:reverse] [--duration:40s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                designProcesses.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                designProcesses.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>
          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--duration:20s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                designTools.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                designTools.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>

          <div
            class="from-off-white pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r"
          >
          </div>
          <div
            class="from-off-white pointer-events-none absolute inset-y-0 right-0 w-1/3 bg-gradient-to-l"
          >
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="business-benefits"
  >
    <div class="mb-10 text-center">
      <h2
        class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
      >
        {businessBenefits.title}
      </h2>
    </div>
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        businessBenefits.benefits.map((benefit) => (
          <div class="flex flex-col rounded-lg border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 text-blue-600">
              <Icon name={benefit.icon} />
            </div>
            <h3 class="mb-2 text-xl font-semibold text-slate-800">
              {benefit.title}
            </h3>
            <p class="text-slate-600">{benefit.description}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8"
  id="product-vision"
>
  <div class="rounded-xl bg-gradient-to-r from-indigo-50 to-slate-50 p-8 shadow-sm">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
      <!-- Text Content -->
      <div class="md:col-span-8">
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          From Services to Products: Our Design Vision
        </h2>
        <p class="mt-4 text-lg text-slate-700">
          We're developing more than just UI/UX servicesâ€”we're creating scalable design systems that can evolve into proprietary products. Our roadmap includes building reusable component libraries and design frameworks that can transition from custom implementations to standalone products, following the trajectory of industry leaders like Google Material Design.
        </p>
        <div class="mt-8 flex flex-wrap gap-4">
          <div class="flex items-center gap-2">
            <Icon name="checkCircle" />
            <p class="text-slate-600">Design systems that scale from startup to enterprise</p>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="checkCircle" />
            <p class="text-slate-600">Framework development for future product offerings</p>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="checkCircle" />
            <p class="text-slate-600">Strategic design partnerships for market expansion</p>
          </div>
        </div>
      </div>

      <!-- Animation Visual
      <div class="md:col-span-4 flex justify-center md:justify-end">
        <div
          class="relative flex h-64 w-64 items-center justify-center rounded-full bg-slate-50 shadow-inner min-w-[16rem]"
        >
          <div class="animate-rotate absolute top-1/2 left-1/2 z-10 h-60 w-60 -translate-x-1/2 -translate-y-1/2 rounded-full border-[4px] border-indigo-300"></div>
          <div class="animate-rotate-reverse absolute top-1/2 left-1/2 z-20 h-44 w-44 -translate-x-1/2 -translate-y-1/2 rounded-full border-[4px] border-indigo-400"></div>
          <div class="absolute top-1/2 left-1/2 z-30 h-24 w-24 -translate-x-1/2 -translate-y-1/2 animate-pulse rounded-full bg-gradient-to-br from-indigo-500 to-indigo-700 shadow-lg"></div>
          <div class="animate-orbit-1 absolute top-1/2 left-1/2 z-40 h-6 w-6 -translate-x-1/2 -translate-y-1/2 rounded-full bg-indigo-500 shadow-md"></div>
          <div class="animate-orbit-2 absolute top-1/2 left-1/2 z-40 h-6 w-6 -translate-x-1/2 -translate-y-1/2 rounded-full bg-indigo-500 shadow-md"></div>
          <div class="animate-orbit-3 absolute top-1/2 left-1/2 z-40 h-6 w-6 -translate-x-1/2 -translate-y-1/2 rounded-full bg-indigo-500 shadow-md"></div>
          <div class="animate-orbit-4 absolute top-1/2 left-1/2 z-40 h-6 w-6 -translate-x-1/2 -translate-y-1/2 rounded-full bg-indigo-500 shadow-md"></div>
        </div>
      </div> -->
    </div>
  </div>
</section>

  <Cta />

  <style>
    @keyframes float-desktop {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    @keyframes float-tablet {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-15px);
      }
    }

    @keyframes float-mobile {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-8px);
      }
    }

    @keyframes flip {
      0%,
      45% {
        transform: rotateY(0deg);
      }
      50%,
      95% {
        transform: rotateY(180deg);
      }
      100% {
        transform: rotateY(0deg);
      }
    }

    @keyframes rotate {
      0% {
        transform: translate(-50%, -50%) rotate(0deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(360deg);
      }
    }

    @keyframes pulse {
      0%,
      100% {
        transform: translate(-50%, -50%) scale(1);
      }
      50% {
        transform: translate(-50%, -50%) scale(1.1);
      }
    }

    @keyframes orbit {
      0% {
        transform: translate(-50%, -50%) rotate(0deg) translateX(90px)
          rotate(0deg);
      }
      100% {
        transform: translate(-50%, -50%) rotate(360deg) translateX(90px)
          rotate(-360deg);
      }
    }

    .animate-float-desktop {
      animation: float-desktop 4s ease-in-out infinite;
    }

    .animate-float-tablet {
      animation: float-tablet 4s ease-in-out infinite 0.5s;
    }

    .animate-float-mobile {
      animation: float-mobile 4s ease-in-out infinite 1s;
    }

    .animate-flip {
      animation: flip 6s ease-in-out infinite;
    }

    .animate-flip-delay {
      animation: flip 6s ease-in-out infinite 3s;
    }

    .animate-rotate {
      animation: rotate 20s linear infinite;
    }

    .animate-rotate-reverse {
      animation: rotate 15s linear infinite reverse;
    }

    .animate-pulse {
      animation: pulse 3s ease-in-out infinite;
    }

    .animate-orbit-1 {
      animation: orbit 8s linear infinite;
    }

    .animate-orbit-2 {
      animation: orbit 8s linear infinite 2s;
    }

    .animate-orbit-3 {
      animation: orbit 8s linear infinite 4s;
    }

    .animate-orbit-4 {
      animation: orbit 8s linear infinite 6s;
    }
  </style>
</BaseLayout>
