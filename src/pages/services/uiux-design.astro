    "Low and high-fidelity wireframes to map information architecture",
    "Interactive prototypes that simulate real user experiences",
    "User flow mapping to optimize navigation and conversion paths",
    "Collaborative revision processes with stakeholder feedback integration",
  ],
};

// SEO metadata
const seo = {
  title: "UI/UX Design Services | Wishyor Responsive Design, Wireframing & Prototyping",
  description:
    "Wishyor transforms your digital presence with expert UI/UX design: responsive interfaces, wireframing, and prototyping for enterprise solutions.",
};

const designFoundationSection = {
  title: "UI/UX Design Foundation",
  description:
    "We help organizations build robust design systems that serve as the foundation for cohesive user experiences across all digital touchpoints. Our approach ensures scalability, consistency, and efficiency in your UI/UX implementation.",
};

const designElements = [
  "Typography Systems",
  "Color Palettes",
  "Component Libraries",
  "Grid Systems",
  "Interaction Patterns",
];

const designProcesses = [
  "User Research",
  "Persona Development",
  "Journey Mapping",
  "Usability Testing",
  "Heuristic Evaluation",
];

const designTools = ["Figma", "Adobe XD", "Sketch", "InVision", "Principle"];

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "UI/UX Design Services",
  description:
    "Wishyor's professional UI/UX design: responsive interface design, wireframing, and prototyping for engaging enterprise experiences.",
  provider: {
    "@type": "Organization",
    name: "Wishyor",
    url: `${Astro.site}`,
  },
  areaServed: "Worldwide",
  serviceType: "UI/UX Design",
};

const businessBenefits = {
  title: "Why Invest in UI/UX Design",
  benefits: [
    {
      title: "Increased Conversion Rates",
      description:
        "Intuitive interfaces and clear user journeys reduce friction and boost conversion rates across your digital platforms.",
      icon: "chartBar",
    },
    {
      title: "Enhanced User Satisfaction",
      description:
        "User-centered design creates memorable experiences that increase satisfaction, retention, and brand loyalty.",
      icon: "heart",
    },
    {
      title: "Reduced Development Costs",
      description:
        "Identifying and resolving UX issues early in the design process prevents costly revisions during development.",
      icon: "dollarSign",
    },
    {
      title: "Competitive Differentiation",
      description:
        "Stand out in crowded markets with distinctive, intuitive interfaces that showcase your brand's unique personality.",
      icon: "trophy",
    },
    {
      title: "Improved Accessibility",
      description:
        "Inclusive design practices expand your market reach and ensure compliance with accessibility standards.",
      icon: "users",
    },
    {
      title: "Data-Informed Decision Making",
      description:
        "User research and testing provides actionable insights that drive continuous experience improvements.",
      icon: "barChart",
    },
  ],
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          {platform.title}
        </h1>
        <p class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8">
          {platform.description}
        </p>
      </div>

      <div class="relative m-auto w-full pt-16 sm:w-[90%]">
        <div
          class="via-off-white to-off-white pointer-events-none absolute inset-x-0 -bottom-2 z-10 hidden h-1/3 w-full bg-linear-to-b/oklch from-transparent sm:block"
        >
        </div>
        <div class="aspect-video">
          <video autoplay loop muted playsinline preload="metadata" class="aspect-auto rounded-xl">
            <source src={video} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>
  <section
