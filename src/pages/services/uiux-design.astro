const platform = {
  title: "UI/UX Design Services",
  description:
    "Elevate your digital presence with our user-centered UI/UX design services. We create intuitive, accessible, and engaging digital experiences that convert visitors into loyal customers and boost your business performance.",
};

const video = "https://vyclk3sx0z.ufs.sh/f/hv6ttNERWpXuOGj0KhIPk5MLw0bimBlYnq6Vd2NfSJW9gCQU";

const responsiveDesignSection = {
  title: "Responsive Interface Design",
  description:
    "Create seamless digital experiences across all devices with our responsive interface design solutions. We craft visually stunning, consistent, and accessible interfaces that adapt perfectly to any screen size, ensuring your users enjoy optimal experiences whether on desktop, tablet, or mobile.",
