                    <div class="h-2 w-2 rounded-full bg-teal-500 animate-pulse"></div>
                    <span class="text-xs font-medium text-slate-700">Interactive</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Design Tools Floating Elements -->
          <div class="design-tools absolute top-4 -right-6 flex flex-col gap-2">
            <div
              class="tool-icon h-8 w-8 bg-gradient-to-br from-teal-400 to-red-400 rounded-lg shadow-lg flex items-center justify-center animate-bounce"
