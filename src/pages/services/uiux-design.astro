            </div>

            <!-- Content -->
            <div class="grid grid-cols-3 gap-2 mb-3">
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-full bg-slate-300 rounded-full"></div>
                <div class="h-1.5 w-3/4 bg-slate-200 rounded-full"></div>
                <div class="h-1.5 w-5/6 bg-slate-200 rounded-full"></div>
              </div>
              <div
                class="col-span-2 bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1"
              >
                <div class="h-2 w-full bg-teal-300 rounded-full"></div>
                <div class="h-1.5 w-full bg-slate-200 rounded-full"></div>
                <div class="h-1.5 w-4/5 bg-slate-200 rounded-full"></div>
                <div class="h-1.5 w-3/4 bg-slate-200 rounded-full"></div>
              </div>
            </div>

            <!-- Footer -->
            <div class="bg-white rounded p-1.5 shadow-sm border border-slate-200">
              <div class="h-1.5 w-1/3 bg-slate-300 rounded-full mx-auto"></div>
            </div>
          </div>

          <div class="mt-2 text-center">
            <span class="text-xs text-slate-500">1920x1080 â€¢ Full Layout</span>
          </div>
        </div>

        <!-- Tablet Device -->
        <div
          class="w-full max-w-xs sm:max-w-sm md:max-w-md bg-white rounded-2xl shadow-xl border border-slate-200 p-4 sm:p-5"
        >
          <!-- Tablet Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-2">
              <div class="h-3 w-3 rounded-full bg-teal-500"></div>
              <span class="text-xs font-semibold text-slate-700">Tablet Interface</span>
            </div>
            <div class="text-xs text-slate-500">iPad</div>
          </div>

          <!-- Tablet Layout -->
          <div
            class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg p-3 border border-slate-200"
          >
            <div
              class="bg-white rounded-md p-2 mb-3 shadow-sm border border-slate-200 flex justify-between"
            >
              <div class="h-2 w-10 bg-teal-300 rounded-full"></div>
              <div class="flex gap-1">
                <div class="h-2 w-2 bg-slate-300 rounded-full"></div>
                <div class="h-2 w-2 bg-slate-300 rounded-full"></div>
                <div class="h-2 w-2 bg-slate-300 rounded-full"></div>
              </div>
            </div>

            <!-- Content -->
            <div class="grid grid-cols-2 gap-2 mb-3">
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-full bg-teal-300 rounded-full"></div>
                <div class="h-1 w-3/4 bg-slate-200 rounded-full"></div>
                <div class="h-1 w-5/6 bg-slate-200 rounded-full"></div>
              </div>
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-full bg-slate-300 rounded-full"></div>
                <div class="h-1 w-2/3 bg-slate-200 rounded-full"></div>
                <div class="h-1 w-4/5 bg-slate-200 rounded-full"></div>
              </div>
            </div>

            <div class="bg-white rounded p-2 shadow-sm border border-slate-200 flex justify-around">
              <div class="h-1.5 w-6 bg-teal-300 rounded-full"></div>
              <div class="h-1.5 w-6 bg-slate-300 rounded-full"></div>
              <div class="h-1.5 w-6 bg-slate-300 rounded-full"></div>
              <div class="h-1.5 w-6 bg-slate-300 rounded-full"></div>
            </div>
          </div>

          <div class="mt-2 text-center">
            <span class="text-xs text-slate-500">768x1024 â€¢ Adaptive Layout</span>
          </div>
        </div>

        <!-- Mobile Device -->
        <div
          class="w-full max-w-[18rem] sm:max-w-xs bg-white rounded-2xl shadow-xl border border-slate-200 p-4"
        >
          <!-- Mobile Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-2">
              <div class="h-3 w-3 rounded-full bg-teal-500"></div>
              <span class="text-xs font-semibold text-slate-700">Mobile Interface</span>
            </div>
            <div class="text-xs text-slate-500">iPhone</div>
          </div>

          <!-- Mobile Layout -->
          <div
            class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg p-3 border border-slate-200"
          >
            <!-- Status Bar -->
            <div
              class="bg-white rounded-md p-1.5 mb-2 shadow-sm border border-slate-200 flex justify-between"
            >
              <div class="h-1.5 w-8 bg-teal-300 rounded-full"></div>
              <div class="flex gap-1">
                <div class="h-1 w-1 bg-slate-400 rounded-full"></div>
                <div class="h-1 w-1 bg-slate-400 rounded-full"></div>
                <div class="h-1 w-1 bg-slate-400 rounded-full"></div>
              </div>
            </div>

            <!-- Content Stack -->
            <div class="space-y-2 mb-2">
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-full bg-teal-300 rounded-full"></div>
                <div class="h-1 w-4/5 bg-slate-200 rounded-full"></div>
              </div>
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-3/4 bg-slate-300 rounded-full"></div>
                <div class="h-1 w-full bg-slate-200 rounded-full"></div>
              </div>
              <div class="bg-white rounded p-2 shadow-sm border border-slate-200 space-y-1">
                <div class="h-1.5 w-5/6 bg-slate-300 rounded-full"></div>
                <div class="h-1 w-2/3 bg-slate-200 rounded-full"></div>
              </div>
            </div>

            <!-- Tab Bar -->
            <div
              class="bg-white rounded p-1.5 shadow-sm border border-slate-200 flex justify-around"
            >
              <div class="h-1.5 w-4 bg-teal-300 rounded-full"></div>
              <div class="h-1.5 w-4 bg-slate-300 rounded-full"></div>
              <div class="h-1.5 w-4 bg-slate-300 rounded-full"></div>
            </div>
          </div>

          <div class="mt-2 text-center">
            <span class="text-xs text-slate-500">375x812 â€¢ Mobile-First</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="wireframe-and-prototyping"
  >
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12 lg:gap-16">
      <div class="order-last md:order-first">
        <div class="wireframe-prototype-container relative w-full max-w-lg mx-auto">
          <!-- Design Process Flow -->
          <div class="design-process-flow relative">
            <!-- Wireframe Stage -->
            <div
              class="wireframe-stage bg-white rounded-2xl shadow-xl border border-slate-200 p-6 mb-8 transform hover:scale-105 transition-all duration-500"
            >
              <!-- Stage Header -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-3">
                  <div
                    class="stage-indicator h-4 w-4 rounded-full bg-gradient-to-br from-slate-400 to-slate-500 flex items-center justify-center"
                  >
                    <div class="h-2 w-2 rounded-full bg-white"></div>
                  </div>
                  <span class="text-sm font-semibold text-slate-800">Wireframe</span>
                </div>
                <div class="text-xs text-slate-500 bg-slate-100 px-2 py-1 rounded-full">Step 1</div>
              </div>

              <!-- Wireframe Layout -->
              <div
                class="wireframe-layout bg-gradient-to-br from-slate-50 to-slate-100 rounded-lg p-4 border-2 border-dashed border-slate-300"
              >
                <!-- Header -->
                <div class="wireframe-header h-8 bg-slate-200 rounded mb-4 flex items-center px-3">
                  <div class="flex gap-1">
                    <div class="h-2 w-2 rounded-full bg-slate-400"></div>
                    <div class="h-2 w-2 rounded-full bg-slate-400"></div>
                    <div class="h-2 w-2 rounded-full bg-slate-400"></div>
                  </div>
                </div>

                <!-- Content Area -->
                <div class="wireframe-content space-y-3">
                  <div class="flex gap-3">
                    <div class="wireframe-sidebar w-16 h-24 bg-slate-200 rounded"></div>
                    <div class="wireframe-main flex-1 space-y-2">
                      <div class="h-3 bg-slate-200 rounded"></div>
                      <div class="h-3 bg-slate-200 rounded w-4/5"></div>
                      <div class="h-3 bg-slate-200 rounded w-3/5"></div>
                    </div>
                  </div>
                  <div class="wireframe-footer h-6 bg-slate-200 rounded"></div>
                </div>
              </div>
            </div>

            <!-- Transform Arrow -->
            <div class="transform-indicator flex justify-center mb-8">
              <div class="flex flex-col items-center">
                <div
                  class="transform-circle h-8 w-8 rounded-full bg-gradient-to-br from-teal-500 to-teal-500 flex items-center justify-center shadow-lg animate-pulse"
                >
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 3a1 1 0 011 1v5.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414L9 9.586V4a1 1 0 011-1z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-xs text-slate-600 mt-2 font-medium">Transform</span>
              </div>
            </div>

            <!-- High-Fidelity Prototype Stage -->
            <div
              class="prototype-stage bg-white rounded-2xl shadow-xl border border-slate-200 p-6 transform hover:scale-105 transition-all duration-500"
            >
              <!-- Stage Header -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-3">
                  <div
                    class="stage-indicator h-4 w-4 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center animate-pulse"
                  >
                    <div class="h-2 w-2 rounded-full bg-white"></div>
                  </div>
                  <span class="text-sm font-semibold text-slate-800">Hi-Fi Prototype</span>
                </div>
                <div class="text-xs text-slate-500 bg-teal-100 px-2 py-1 rounded-full">Step 2</div>
              </div>

              <!-- Prototype Layout -->
              <div
                class="prototype-layout bg-gradient-to-br from-teal-50 to-teal-50 rounded-lg p-4 border border-teal-200"
              >
                <!-- Header -->
                <div
                  class="prototype-header h-8 bg-gradient-to-r from-teal-500 to-teal-500 rounded mb-4 flex items-center px-3"
                >
                  <div class="flex gap-1">
                    <div class="h-2 w-2 rounded-full bg-white opacity-80"></div>
                    <div class="h-2 w-2 rounded-full bg-white opacity-60"></div>
                    <div class="h-2 w-2 rounded-full bg-white opacity-40"></div>
                  </div>
                  <div class="ml-auto">
                    <div class="h-2 w-16 bg-white opacity-60 rounded-full"></div>
                  </div>
                </div>

                <!-- Content Area -->
                <div class="prototype-content space-y-3">
                  <div class="flex gap-3">
                    <div
                      class="prototype-sidebar w-16 h-24 bg-gradient-to-b from-teal-200 to-teal-300 rounded shadow-sm"
                    >
                    </div>
                    <div class="prototype-main flex-1 space-y-2">
                      <div class="h-4 bg-gradient-to-r from-teal-400 to-teal-400 rounded shadow-sm">
                      </div>
                      <div
                        class="h-3 bg-gradient-to-r from-teal-300 to-teal-300 rounded w-4/5 shadow-sm"
                      >
                      </div>
                      <div
                        class="h-3 bg-gradient-to-r from-teal-300 to-teal-300 rounded w-3/5 shadow-sm"
                      >
                      </div>
                      <div class="flex gap-2 mt-3">
                        <div
                          class="h-6 w-16 bg-gradient-to-r from-teal-400 to-teal-500 rounded-full shadow-md flex items-center justify-center"
                        >
                          <div class="h-1.5 w-8 bg-white rounded-full"></div>
                        </div>
                        <div
                          class="h-6 w-16 bg-gradient-to-r from-teal-400 to-teal-500 rounded-full shadow-md flex items-center justify-center"
                        >
                          <div class="h-1.5 w-8 bg-white rounded-full"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div
                    class="prototype-footer h-6 bg-gradient-to-r from-slate-300 to-slate-400 rounded shadow-sm"
                  >
                  </div>
                </div>

                <!-- Interactive Elements -->
                <div class="flex justify-center mt-4">
                  <div
                    class="flex items-center gap-2 bg-white bg-opacity-80 backdrop-blur-sm rounded-full px-3 py-1 shadow-md"
