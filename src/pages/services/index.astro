---
import Cta from "@/components/service/cta.astro";
import aimlImage from "@images/if_ai_ml.png";
import cloudImage from "@images/if_cloud_services.png";
import fullStackImage from "@images/if_full_stack_development.png";
import uiuxImage from "@images/if_ui_ux_design.png";
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { Thing, WithContext } from "schema-dts";

// SEO metadata
const seo = {
  title: "Wishyor Services | Software, Cloud, AI/ML & Digital Transformation",
  description:
    "Wishyor offers full-stack development, UI/UX design, AI & Machine Learning, and cloud services for enterprise digital transformation.",
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Full-Stack Development",
      url: `${Astro.site}services/full-stack-development`,
    },
    {
      "@type": "ListItem",
      position: 4,
      name: "Cloud Services",
      url: `${Astro.site}services/cloud-services`,
    },
    {
      "@type": "ListItem",
      position: 3,
      name: "AI & Machine Learning",
      url: `${Astro.site}services/ai-machine-learning`,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "UI/UX Design",
      url: `${Astro.site}services/uiux-design`,
    },
  ],
};

const services = [
  {
    id: "full-stack-development",
    title: "Full-Stack Development",
    description:
      "End-to-end web and mobile solutions that deliver seamless user experiences and robust backend functionality.",
    image: fullStackImage,
    link: "/services/full-stack-development",
    gradient: "from-teal-500 to-teal-600",
    bgGradient: "from-teal-50 to-teal-50",
    iconColor: "text-teal-600",
    accentColor: "bg-teal-500",
    hoverColor: "hover:bg-teal-600",
    features: [
      "Web & Mobile App Development",
      "API & Database Design",
      "Enterprise-Grade Security & Compliance",
    ],
    stats: "500+ Projects",
    icon: "code",
  },
  {
    id: "uiux-design",
    title: "UI/UX Design",
    description:
      "User-centered design that transforms complex requirements into intuitive, engaging interfaces that delight your customers.",
    image: uiuxImage,
    link: "/services/uiux-design",
    gradient: "from-teal-500 to-teal-600",
    bgGradient: "from-teal-50 to-teal-50",
    iconColor: "text-teal-600",
    accentColor: "bg-teal-500",
    hoverColor: "hover:bg-teal-600",
    features: [
      "Wireframe & Prototyping",
      "Responsive Interface Design",
      "User Experience Research",
    ],
    stats: "98% User Satisfaction",
    icon: "palette",
  },
  {
    id: "ai-machine-learning",
    title: "AI & Machine Learning",
    description:
      "Harness the power of artificial intelligence to transform your business operations, enhance customer experiences, and drive data-driven decision making.",
    image: aimlImage,
    link: "/services/ai-machine-learning",
    gradient: "from-teal-500 to-emerald-600",
    bgGradient: "from-teal-50 to-emerald-50",
    iconColor: "text-teal-600",
    accentColor: "bg-teal-500",
    hoverColor: "hover:bg-teal-600",
    features: ["Predictive Analytics", "Chatbots & NLP Solutions", "Enterprise AI Foundation"],
    stats: "85% Accuracy Rate",
    icon: "brain",
  },
  {
    id: "cloud-services",
    title: "Cloud Services",
    description:
      "Scalable, secure, and optimized cloud infrastructure that ensures your applications perform at their best while controlling costs.",
    image: cloudImage,
    link: "/services/cloud-services",
    gradient: "from-teal-500 to-cyan-600",
    bgGradient: "from-teal-50 to-cyan-50",
    iconColor: "text-teal-600",
    accentColor: "bg-teal-500",
    hoverColor: "hover:bg-teal-600",
    features: ["Cloud Migration & Optimization", "DevOps & Automation", "Serverless Architecture"],
    stats: "99.9% Uptime",
    icon: "cloud",
  },
];

const whyChooseUs = [
  {
    title: "Expertise Across Technologies",
    description:
      "Our diverse team brings specialized knowledge across development stacks, design principles, AI/ML, and cloud platforms.",
    icon: "brain",
    gradient: "from-teal-500 to-teal-600",
    stat: "50+",
    statLabel: "Technologies"
  },
  {
    title: "End-to-End Solutions",
    description:
      "From concept to deployment and beyond, we handle every aspect of the development lifecycle for seamless execution.",
    icon: "layersLinked",
    gradient: "from-teal-500 to-teal-600",
    stat: "100%",
    statLabel: "Project Completion"
  },
  {
    title: "Scalable Architecture",
    description:
      "We build with growth in mind, ensuring your solutions can evolve with your business needs and market demands.",
    icon: "expandDiagonal",
    gradient: "from-teal-500 to-emerald-600",
    stat: "10x",
    statLabel: "Performance Boost"
  },
  {
    title: "Strategic Partnership",
    description:
      "We're not just vendorsâ€”we're partners invested in your long-term success, providing strategic guidance every step of the way.",
    icon: "handshake",
    gradient: "from-teal-500 to-teal-600",
    stat: "24/7",
    statLabel: "Support Available"
  },
];

const processSteps = [
  {
    step: "01",
    title: "Discovery & Planning",
    description: "We dive deep into your requirements, goals, and constraints to create a comprehensive roadmap.",
    icon: "search",
    color: "text-teal-600",
    bgColor: "bg-teal-50"
  },
  {
    step: "02", 
    title: "Design & Architecture",
    description: "Our experts craft scalable solutions with user-centric design and robust technical architecture.",
    icon: "layers",
    color: "text-teal-600",
    bgColor: "bg-teal-50"
  },
  {
    step: "03",
    title: "Development & Testing",
    description: "Agile development with continuous testing ensures quality delivery at every milestone.",
    icon: "code",
    color: "text-teal-600",
    bgColor: "bg-teal-50"
  },
  {
    step: "04",
    title: "Launch & Support",
    description: "Seamless deployment with ongoing support and optimization for sustained success.",
    icon: "rocket",
    color: "text-teal-600",
    bgColor: "bg-teal-50"
  }
];
---

<BaseLayout seo={seo} schema={schema}>
  <main id="main-content" role="main">
    <!-- Hero Section -->
    <section class="relative overflow-hidden" aria-label="Digital Innovation Services">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-teal-50/30"></div>
      <div class="absolute top-0 left-0 w-full h-full opacity-[0.03]">
        <div class="absolute top-10 left-10 w-64 h-64 bg-teal-400 rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 right-10 w-96 h-96 bg-teal-400 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative mx-auto max-w-7xl px-4 pt-32 pb-16 sm:px-6 lg:px-8 lg:pt-32 lg:pb-24">
        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-16 items-center">
          <div class="relative z-10 animate-fade-in-up">
            <div class="inline-flex items-center px-4 py-2 rounded-full bg-teal-50 text-teal-700 text-sm font-medium mb-6 border border-teal-200">
              <Icon name="zap" class="w-4 h-4 mr-2" />
              Digital Innovation Services
            </div>
            
            <h1 class="text-4xl font-bold text-slate-900 sm:text-5xl md:text-6xl lg:text-7xl leading-tight" >
              Transform Your 
              <span class="bg-gradient-to-r from-teal-600 to-teal-600 bg-clip-text text-transparent">
                Digital Vision
              </span>
              Into Reality
            </h1>
            
            <p class="mt-6 text-xl text-slate-600 leading-relaxed max-w-2xl" >
              Comprehensive technology services that bridge the gap between innovative ideas and market-ready solutions. 
              From cutting-edge web applications to intelligent AI systems.
            </p>
            
            <div class="mt-10 flex flex-col sm:flex-row gap-4">
              <a href="#service-areas" title="Explore our technology services" aria-label="Explore Services" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-teal-600 to-teal-600 rounded-xl hover:from-teal-700 hover:to-teal-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                Explore Services
                <Icon name="arrowRight" class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
              </a>
              <a href="#why-choose-us" title="Learn why to choose Wishyor" aria-label="Why Choose Us" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-slate-700 bg-white border-2 border-slate-200 rounded-xl hover:border-slate-300 transition-all duration-300 hover:shadow-lg">
                Why Choose Us
                <Icon name="users" class="w-5 h-5 ml-2" />
              </a>
            </div>
            
            <!-- Stats -->
            <div class="mt-12 grid grid-cols-3 gap-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900">500+</div>
                <div class="text-sm text-slate-600">Projects Delivered</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900">98%</div>
                <div class="text-sm text-slate-600">Client Satisfaction</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-slate-900">24/7</div>
                <div class="text-sm text-slate-600">Support Available</div>
              </div>
            </div>
          </div>
          
          <div class="relative animate-fade-in-up animation-delay-300">
            <!-- Main Hero Visual -->
            <div class="relative">
              <div class="aspect-square bg-gradient-to-br from-teal-100 via-teal-100 to-teal-100 rounded-3xl shadow-2xl flex items-center justify-center relative overflow-hidden">
                <!-- Animated Background Elements -->
                <div class="absolute inset-0 bg-gradient-to-br from-teal-400/20 to-teal-400/20"></div>
                
                <!-- Floating Cards -->
                <div class="absolute top-8 left-8 w-16 h-16 bg-white rounded-xl shadow-lg flex items-center justify-center floating-card">
                  <Icon name="code" class="w-8 h-8 text-teal-600" />
                </div>
                <div class="absolute top-16 right-12 w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center floating-card animation-delay-1000">
                  <Icon name="palette" class="w-6 h-6 text-teal-600" />
                </div>
                <div class="absolute bottom-16 left-12 w-14 h-14 bg-white rounded-xl shadow-lg flex items-center justify-center floating-card animation-delay-2000">
                  <Icon name="brain" class="w-7 h-7 text-teal-600" />
                </div>
                <div class="absolute bottom-8 right-8 w-16 h-16 bg-white rounded-xl shadow-lg flex items-center justify-center floating-card animation-delay-1500">
                  <Icon name="cloud" class="w-8 h-8 text-teal-600" />
                </div>
                
                <!-- Center Content -->
                <div class="text-center z-10">
                  <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center mx-auto mb-4 shadow-xl">
                    <Icon name="zap" class="w-12 h-12 text-teal-600" />
                  </div>
                  <h3 class="text-2xl font-bold text-slate-800 mb-2">Digital Innovation</h3>
                  <p class="text-slate-600">Powered by Technology</p>
                </div>
                
                <!-- Animated Dots -->
                <div class="absolute top-4 right-4 w-2 h-2 bg-teal-400 rounded-full opacity-60 animate-pulse"></div>
                <div class="absolute bottom-6 left-6 w-1.5 h-1.5 bg-teal-500 rounded-full opacity-70 animate-pulse animation-delay-500"></div>
                <div class="absolute top-20 right-20 w-1 h-1 bg-teal-600 rounded-full opacity-60 animate-pulse animation-delay-1000"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas Section -->
    <section id="service-areas" class="relative py-20 lg:py-32 overflow-hidden" aria-label="Our Expertise">
      <div class="absolute inset-0 bg-gradient-to-b from-white to-slate-50"></div>
      
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-teal-50 text-teal-700 text-sm font-medium mb-6 border border-teal-200">
            <Icon name="layers" class="w-4 h-4 mr-2" />
            Our Expertise
          </div>
          
          <h2 class="text-4xl font-bold text-slate-900 md:text-5xl lg:text-6xl mb-6" >
            Comprehensive 
            <span class="bg-gradient-to-r from-teal-600 to-teal-600 bg-clip-text text-transparent">
              Technology Solutions
            </span>
          </h2>
          
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed" >
            From ideation to deployment, we provide end-to-end services that drive digital transformation 
            and accelerate business growth.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
          {services.map((service, index) => (
            <article class={`group relative bg-white rounded-3xl p-8 lg:p-10 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-slate-100 overflow-hidden animate-fade-in-up`} style={`animation-delay: ${index * 200}ms`}  >
              <!-- Background Gradient -->
              <div class={`absolute inset-0 bg-gradient-to-br ${service.bgGradient} opacity-50 transition-opacity duration-500 group-hover:opacity-70`}></div>
              
              <!-- Content -->
              <div class="relative z-10">
                <!-- Header -->
                <div class="flex items-start justify-between mb-6">
                  <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${service.gradient} flex items-center justify-center shadow-lg`}>
                    <Icon name={service.icon} class="w-8 h-8 text-white" />
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-slate-900">{service.stats}</div>
                    <div class="text-sm text-slate-600">Success Rate</div>
                  </div>
                </div>
                
                <!-- Title & Description -->
                <h3 class="text-2xl font-bold text-slate-900 mb-4 group-hover:text-slate-800 transition-colors" >
                  {service.title}
                </h3>
                
                <p class="text-slate-600 mb-6 leading-relaxed" >
                  {service.description}
                </p>
                
                <!-- Features -->
                <div class="space-y-3 mb-8">
                  {service.features.map((feature) => (
                    <div class="flex items-center gap-3">
                      <div class="flex-shrink-0 mt-0.5 w-5 h-5 rounded-full bg-teal-100 flex items-center justify-center">
                <div class="w-2 h-2 rounded-full bg-teal-500" />
              </div>
                      <span class="text-slate-700 font-medium">{feature}</span>
                    </div>
                  ))}
                </div>
                
                <!-- CTA Button -->
                <a href={service.link} title={`Learn more about ${service.title}`} aria-label={`Learn more about ${service.title}`} class={`group/btn inline-flex items-center justify-center w-full px-6 py-4 text-white font-semibold rounded-xl bg-gradient-to-r ${service.gradient} ${service.hoverColor} transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1`}>
                  Learn More About {service.title}
                  <Icon name="arrowRight" class="w-5 h-5 ml-2 group-hover/btn:translate-x-1 transition-transform" />
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="relative py-20 lg:py-32" aria-label="Our Process"  >
      <div class="absolute inset-0 bg-gradient-to-b from-slate-50 to-white"></div>
      
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-teal-50 text-teal-700 text-sm font-medium mb-6 border border-teal-200">
            <Icon name="settings" class="w-4 h-4 mr-2" />
            Our Process
          </div>
          
          <h2 class="text-4xl font-bold text-slate-900 md:text-5xl mb-6" >
            How We 
            <span class="bg-gradient-to-r from-teal-600 to-teal-600 bg-clip-text text-transparent">
              Deliver Excellence
            </span>
          </h2>
          
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed" >
            Our proven methodology ensures successful project delivery with transparency, 
            quality, and continuous collaboration at every step.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {processSteps.map((step, index) => (
            <div class={`relative group animate-fade-in-up`} style={`animation-delay: ${index * 150}ms`}>
              <!-- Connector Line (hidden on mobile) -->
              {index < processSteps.length - 1 && (
                <div class="hidden lg:block absolute top-16 left-full w-full h-0.5 bg-gradient-to-r from-slate-300 to-transparent transform translate-x-4 z-0"></div>
              )}
              
              <div class={`relative ${step.bgColor} rounded-2xl p-8 h-full transition-all duration-300 hover:shadow-lg border border-slate-200 group-hover:border-slate-300`}>
                <!-- Step Number -->
                <div class="flex items-center justify-center w-12 h-12 bg-white rounded-xl shadow-sm mb-6 border-2 border-slate-100">
                  <span class="text-xl font-bold text-slate-800">{step.step}</span>
                </div>
                
                <!-- Icon -->
                <div class={`w-14 h-14 rounded-xl ${step.color.replace('text-', 'bg-').replace('-600', '-100')} flex items-center justify-center mb-6`}>
                  <Icon name={step.icon} class={`w-7 h-7 ${step.color}`} />
                </div>
                
                <!-- Content -->
                <h3 class="text-xl font-bold text-slate-900 mb-4" >{step.title}</h3>
                <p class="text-slate-600 leading-relaxed" >{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section id="why-choose-us" class="relative py-20 lg:py-32 overflow-hidden" aria-label="Why Choose Wishyor"  >
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 to-teal-900"></div>
      <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
      
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/10 text-white text-sm font-medium mb-6 border border-white/20 backdrop-blur-sm">
            <Icon name="star" class="w-4 h-4 mr-2" />
            Why Choose Us
          </div>
          
          <h2 class="text-4xl font-bold text-white md:text-5xl lg:text-6xl mb-6" >
            Your Success Is Our
            <span class="bg-gradient-to-r from-teal-400 to-teal-400 bg-clip-text text-transparent block">
              Primary Mission
            </span>
          </h2>
          
          <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed" >
            We combine technical expertise with strategic thinking to deliver solutions that 
            not only meet your current needs but also scale with your future growth.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {whyChooseUs.map((item, index) => (
            <div class={`group relative bg-white/5 backdrop-blur-sm rounded-3xl p-8 border border-white/10 hover:border-white/20 transition-all duration-500 hover:bg-white/10 animate-fade-in-up`} style={`animation-delay: ${index * 200}ms`}>
              <!-- Background Gradient -->
              <div class={`absolute inset-0 bg-gradient-to-br ${item.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500 rounded-3xl`}></div>
              
              <!-- Content -->
              <div class="relative z-10">
                <!-- Header -->
                <div class="flex items-start justify-between mb-6">
                  <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${item.gradient} flex items-center justify-center shadow-lg`}>
                    <Icon name={item.icon} class="w-8 h-8 text-white" />
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-white">{item.stat}</div>
                    <div class="text-sm text-slate-300">{item.statLabel}</div>
                  </div>
                </div>
                
                <!-- Title & Description -->
                <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-gray-100 transition-colors" >
                  {item.title}
                </h3>
                
                <p class="text-slate-300 leading-relaxed" >
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    <Cta />
  </main>
  <style>
    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes floating {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.6s ease-out forwards;
    }

    .animation-delay-300 {
      animation-delay: 300ms;
    }

    .animation-delay-500 {
      animation-delay: 500ms;
    }

    .animation-delay-1000 {
      animation-delay: 1000ms;
    }

    .animation-delay-1500 {
      animation-delay: 1500ms;
    }

    .animation-delay-2000 {
      animation-delay: 2000ms;
    }

    .floating-card {
      animation: floating 3s ease-in-out infinite;
    }

    .floating-card.animation-delay-1000 {
      animation-delay: 1s;
    }

    .floating-card.animation-delay-1500 {
      animation-delay: 1.5s;
    }

    .floating-card.animation-delay-2000 {
      animation-delay: 2s;
    }

    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }

    /* Responsive Grid Pattern */
    @media (max-width: 768px) {
      .animate-fade-in-up {
        animation-delay: 0ms !important;
      }
    }
  </style>
</BaseLayout>