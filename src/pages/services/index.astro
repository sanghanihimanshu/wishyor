---
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { WithContext, Thing } from "schema-dts";
import { Image } from "astro:assets";
import heroImage from "@images/if_services.png";
import fullStackImage from "@images/if_full_stack_development.png";
import uiuxImage from "@images/if_ui_ux_design.png";
import aimlImage from "@images/if_ai_ml.png";
import cloudImage from "@images/if_cloud_services.png";
import Cta from "@/components/service/cta.astro";

// SEO metadata
const seo = {
  title: "Professional Software Development Services | Web, Mobile, AI/ML & Cloud",
  description:
    "Comprehensive technology services including Full-Stack Development, UI/UX Design, AI & Machine Learning, and Cloud Services to power your digital transformation.",
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Full-Stack Development",
      url: `${Astro.site}services/full-stack-development`,
    },
    {
      "@type": "ListItem",
      position: 4,
      name: "Cloud Services",
      url: `${Astro.site}services/cloud-services`,
    },
    {
      "@type": "ListItem",
      position: 3,
      name: "AI & Machine Learning",
      url: `${Astro.site}services/ai-machine-learning`,
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "UI/UX Design",
      url: `${Astro.site}services/uiux-design`,
    },
  ],
};

const services = [
  {
    id: "full-stack-development",
    title: "Full-Stack Development",
    description: "End-to-end web and mobile solutions that deliver seamless user experiences and robust backend functionality.",
    image: fullStackImage,
    link: "/services/full-stack-development",
    features: [
      "Web & Mobile App Development",
      "API & Database Design",
      "Enterprise-Grade Security & Compliance"
    ],
  },
  {
    id: "uiux-design",
    title: "UI/UX Design",
    description: "User-centered design that transforms complex requirements into intuitive, engaging interfaces that delight your customers.",
    image: uiuxImage,
    link: "/services/uiux-design",
    features: [
      "Wireframe & Prototyping",
      "Responsive Interface Design",
      "User Experience Research"
    ],
  },
  {
    id: "ai-machine-learning",
    title: "AI & Machine Learning",
    description: "Harness the power of artificial intelligence to transform your business operations, enhance customer experiences, and drive data-driven decision making.",
    image: aimlImage,
    link: "/services/ai-machine-learning",
    features: [
      "Predictive Analytics",
      "Chatbots & NLP Solutions",
      "Enterprise AI Foundation"
    ],
  },
  {
    id: "cloud-services",
    title: "Cloud Services",
    description: "Scalable, secure, and optimized cloud infrastructure that ensures your applications perform at their best while controlling costs.",
    image: cloudImage,
    link: "/services/cloud-services",
    features: [
      "Cloud Migration & Optimization",
      "DevOps & Automation",
      "Serverless Architecture"
    ],
  },
];

const whyChooseUs = [
  {
    title: "Expertise Across Technologies",
    description: "Our diverse team brings specialized knowledge across development stacks, design principles, AI/ML, and cloud platforms.",
    icon: "brain"
  },
  {
    title: "End-to-End Solutions",
    description: "From concept to deployment and beyond, we handle every aspect of the development lifecycle for seamless execution.",
    icon: "layersLinked"
  },
  {
    title: "Scalable Architecture",
    description: "We build with growth in mind, ensuring your solutions can evolve with your business needs and market demands.",
    icon: "expandDiagonal"
  },
  {
    title: "Strategic Partnership",
    description: "We're not just vendorsâ€”we're partners invested in your long-term success, providing strategic guidance every step of the way.",
    icon: "handshake"
  }
];
---

<BaseLayout seo={seo} schema={schema}>
  <!-- Hero Section -->
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-8 items-center">
        <div>
          <h1 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
            Technology Services for Digital Innovation
          </h1>
          <p class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8">
            Comprehensive software development services that transform your ideas into market-ready solutions. From web and mobile applications to AI-powered systems and cloud infrastructure.
          </p>
        </div>
        <div class="relative">
          <Image
            src={heroImage}
            alt="Digital services illustration"
            class="rounded-xl shadow-lg"
            width={600}
            height={400}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section id="service-areas" class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 md:py-16 lg:px-8 lg:py-20">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-semibold tracking-tight text-balance text-slate-800 md:text-4xl md:leading-tight">
        Our Service Areas
      </h2>
      <p class="mt-4 mx-auto max-w-3xl text-lg text-slate-600">
        Comprehensive technology solutions designed to accelerate your digital transformation journey
      </p>
    </div>

    <div class="grid grid-cols-1 gap-10">
      {services.map((service, index) => (
        <div class={`border-b border-dashed border-slate-400 pb-12 ${index === services.length - 1 ? 'border-b-0' : ''}`}>
          <div class={`grid grid-cols-1 gap-8 md:grid-cols-2 ${index % 2 !== 0 ? 'md:grid-flow-dense' : ''}`}>
            <div class={`${index % 2 !== 0 ? 'md:col-start-2' : ''}`}>
              <h3 class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight">
                {service.title}
              </h3>
              <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
                {service.description}
              </p>
              <div class="mt-8 flex flex-col gap-4">
                {service.features.map((feature) => (
                  <div class="flex items-center gap-2">
                    <Icon name="checkCircle" />
                    <p class="text-slate-600">{feature}</p>
                  </div>
                ))}
              </div>
              <div class="mt-8">
                <a href={service.link} class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                  Learn more about {service.title}
                  <Icon name="arrowRight" class="ml-2 h-5 w-5" />
                </a>
              </div>
            </div>
            <div class={`flex items-center justify-center ${index % 2 !== 0 ? 'md:col-start-1' : ''}`}>
              <Image
                src={service.image}
                alt={`${service.title} illustration`}
                class="rounded-xl shadow-lg"
                width={500}
                height={300}
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="mx-auto max-w-[85rem] px-4 py-12 sm:px-6 md:py-16 lg:px-8 lg:py-20 bg-slate-50 rounded-xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-semibold tracking-tight text-balance text-slate-800 md:text-4xl md:leading-tight">
        Why Choose Us
      </h2>
      <p class="mt-4 mx-auto max-w-3xl text-lg text-slate-600">
        Partner with us for a collaborative approach that delivers exceptional results
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {whyChooseUs.map((item) => (
        <div class="flex flex-col rounded-lg border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-indigo-100 text-indigo-600">
            <Icon name={item.icon} />
          </div>
          <h3 class="mb-2 text-xl font-semibold text-slate-800">
            {item.title}
          </h3>
          <p class="text-slate-600">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  <Cta />

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }
  </style>
</BaseLayout>
