---
import BaseLayout from "@layout/BaseLayout.astro";
import Diagram from "@common/Diagram.astro";
import Icon from "@ui/icons/Icon.astro";
import type { WithContext, Thing } from "schema-dts";
import Cta from "@/components/service/cta.astro";

const platform = {
  title: "Full-Stack Development Services",
  description:
    "Transform your ideas into powerful digital solutions with our comprehensive full-stack development services. We deliver scalable, secure, and innovative applications that drive business growth and set the foundation for your future product ecosystem.",
};

const video = "https://vyclk3sx0z.ufs.sh/f/hv6ttNERWpXuOGj0KhIPk5MLw0bimBlYnq6Vd2NfSJW9gCQU";

const webMobileDevSection = {
  title: "Web & Mobile App Development",
  description:
    "Build powerful, cross-platform applications that deliver exceptional user experiences across all devices. Our expert team leverages cutting-edge technologies to create scalable solutions that grow with your business and can evolve into standalone products.",
  features: [
    "Custom web applications using React, Angular, and Vue.js",
    "Native and cross-platform mobile apps with React Native and Flutter",
    "Progressive Web Apps (PWAs) for optimal performance and offline capabilities",
    "User-centric interfaces with advanced analytics integration for product evolution",
  ],
};

const apiDatabaseSection = {
  title: "API & Database Design",
  description:
    "Create robust, scalable backend architectures with our expert API and database design services. We ensure high performance, security, and seamless integration capabilities for your applications, building a foundation that can support future product offerings.",
  features: [
    "RESTful and GraphQL API development with versioning for long-term evolution",
    "Microservices architecture design for modular product development",
    "Database optimization and scaling solutions with future growth in mind",
    "API-as-a-Product readiness with developer portals and documentation",
  ],
};

const cloudDevOpsSection = {
  title: "Cloud & DevOps Excellence",
  description:
    "Leverage the power of cloud infrastructure and DevOps practices to ensure your applications are scalable, reliable, and ready for rapid growth. We implement CI/CD pipelines and infrastructure-as-code to support your journey from services to products.",
  features: [
    "Multi-cloud deployment strategies with AWS, Azure, and Google Cloud",
    "Containerization with Docker and orchestration with Kubernetes",
    "Automated testing and deployment pipelines for rapid feature delivery",
    "Infrastructure-as-code using Terraform and CloudFormation",
  ],
};

const productReadinessSection = {
  title: "Product Readiness & Innovation",
  description:
    "We don't just build applications; we architect solutions that can transform into scalable products. Our development approaches incorporate product thinking from day one, setting you on the path to developing your own software products.",
  features: [
    "Modular architecture designed for future productization",
    "White-label ready solutions that can be resold or repackaged",
    "Data-driven design with analytics integration for product evolution",
    "Subscription and monetization models built into service offerings",
  ],
};

// SEO metadata
const seo = {
  title: "Full-Stack Development Services | Wishyor Software, Web & API Development",
  description:
    "Wishyor delivers full-stack development: web & mobile apps, API design, and cloud solutions for scalable enterprise applications.",
};

const securityCompliance = {
  title: "Enterprise-Grade Security & Compliance",
  description:
    "We implement robust security measures and follow industry-standard compliance frameworks to ensure your applications and data are protected at every layer of the stack. Our security-first approach builds customer trust essential for successful product launches.",
};

const cloudSecurity = [
  "Data Encryption",
  "DDoS Protection",
  "Cloud Security",
  "Secure APIs",
  "Firewall Protection",
  "Zero Trust Architecture",
];

const identityAccessManagement = [
  "OAuth 2.0",
  "Multi-factor Auth",
  "Role-based Access",
  "SSO Integration",
  "JWT Authentication",
  "Biometric Integration",
];

const threatDetection = [
  "Real-time Monitoring",
  "Vulnerability Scanning",
  "Intrusion Detection",
  "Security Auditing",
  "Incident Response",
  "Threat Intelligence",
];

const serviceToProdTransformation = {
  title: "Service to Product Transformation",
  steps: [
    {
      title: "Patterns Identification",
      description:
        "We identify common patterns across client projects that can be standardized and productized",
    },
    {
      title: "Modular Architecture",
      description:
        "Build components designed to be repackaged and reused across multiple solutions",
    },
    {
      title: "IP Development",
      description:
        "Create proprietary frameworks and tools that accelerate development and add unique value",
    },
    {
      title: "Growth Roadmap",
      description:
        "Strategic planning for transforming successful services into scalable, marketable products",
    },
  ],
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Full-Stack Development Services",
  description:
    "Wishyor's professional full-stack development: web applications, mobile apps, API design, and database solutions for enterprises.",
  provider: {
    "@type": "Organization",
    name: "Wishyor",
    url: `${Astro.site}`,
  },
  areaServed: "Worldwide",
  serviceType: "Software Development",
};
---

<BaseLayout seo={seo} schema={schema}>
  <main id="main-content" role="main"  >
    <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8" aria-label="Full-Stack Development Services"  >
      <div class="max-w-7xl">
        <div class="mx-auto max-w-2xl lg:mx-0">
          <h1 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl" >
            {platform.title}
          </h1>
          <p class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8" >
            {platform.description}
          </p>
        </div>

        <div class="relative m-auto w-full pt-16 sm:w-[90%]">
          <div
            class="via-off-white to-off-white pointer-events-none absolute inset-x-0 -bottom-2 z-10 hidden h-1/3 w-full bg-linear-to-b/oklch from-transparent sm:block"
          >
          </div>
          <div class="aspect-video">
            <video autoplay loop muted playsinline preload="metadata" class="aspect-auto rounded-xl">
              <source src={video} type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          </div>
        </div>
      </div>
    </section>

    <section class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20" id="web-and-mobile-app-development" aria-label="Web and Mobile App Development"  >
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        <div>
          <h2 class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight" >
            {webMobileDevSection.title}
          </h2>
          <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700" >
            {webMobileDevSection.description}
          </p>
          <div class="mt-8 flex flex-col gap-4">
            {
              webMobileDevSection.features.map((feature) => (
                <div class="flex items-start gap-2 sm:gap-3">
                  <div class="flex-shrink-0 mt-0.5 w-5 h-5 rounded-full bg-teal-100 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-teal-500" />
                  </div>
                  <p class="text-slate-600 text-sm sm:text-base">{feature}</p>
                </div>
              ))
            }
          </div>
        </div>
        <div
          class="relative flex flex-col items-center justify-center gap-8 rounded-xl p-6 md:flex-row lg:gap-16"
        >
          <Diagram />
        </div>
      </div>
    </section>

    <section class="mx-auto max-w-[85rem] border-b border-dashed border-slate-300 px-4 py-12 sm:px-6 md:py-16 lg:px-8 lg:py-20" id="api-and-database-design" aria-label="API and Database Design"  >
      <div class="grid grid-cols-1 gap-10 md:grid-cols-2 md:gap-14 lg:gap-20">
        <!-- Left: API & Database Visualization -->
        <div class="order-last md:order-first">
          <div class="relative w-full max-w-3xl mx-auto">
            <!-- API Layer -->
            <div class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6 mb-10">
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-3">
                  <div class="h-4 w-4 rounded-full bg-teal-500 flex items-center justify-center">
                    <div class="h-2 w-2 rounded-full bg-white"></div>
                  </div>
                  <span class="text-sm font-semibold text-slate-800">
                    <Icon name="globe" class="inline-block mr-2" />
                    API Gateway
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                  <span class="text-xs text-teal-600 font-medium">Active</span>
                </div>
              </div>

              <!-- API Endpoints -->
              <div class="space-y-4">
                <div
                  class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition cursor-pointer"
                >
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <span class="bg-teal-500 text-white text-xs font-bold px-2 py-1 rounded"
                        >GET</span
                      >
                      <span class="text-sm font-mono text-slate-700">/api/users</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="h-2 w-2 rounded-full bg-teal-400"></div>
                      <span class="text-xs text-slate-500">200ms</span>
                    </div>
                  </div>
                  <p class="mt-2 text-xs text-slate-600">Retrieve user data</p>
                </div>

                <div
                  class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition cursor-pointer"
                >
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <span class="bg-teal-500 text-white text-xs font-bold px-2 py-1 rounded"
                        >POST</span
                      >
                      <span class="text-sm font-mono text-slate-700">/api/data</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="h-2 w-2 rounded-full bg-teal-400"></div>
                      <span class="text-xs text-slate-500">150ms</span>
                    </div>
                  </div>
                  <p class="mt-2 text-xs text-slate-600">Create new records</p>
                </div>

                <div
                  class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition cursor-pointer"
                >
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                      <span class="bg-teal-500 text-white text-xs font-bold px-2 py-1 rounded"
                        >PUT</span
                      >
                      <span class="text-sm font-mono text-slate-700">/api/update</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <div class="h-2 w-2 rounded-full bg-teal-400"></div>
                      <span class="text-xs text-slate-500">180ms</span>
                    </div>
                  </div>
                  <p class="mt-2 text-xs text-slate-600">Update existing data</p>
                </div>
              </div>
            </div>

            <!-- Connection Line -->
            <div class="flex justify-center mb-6">
              <div class="flex flex-col items-center">
                <div class="h-6 w-px bg-teal-300"></div>
                <div class="h-3 w-3 rounded-full bg-teal-400 my-1"></div>
                <div class="h-6 w-px bg-teal-300"></div>
              </div>
            </div>

            <!-- Database Layer -->
            <div class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6">
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-3">
                  <div class="h-4 w-4 rounded-full bg-teal-500 flex items-center justify-center">
                    <div class="h-2 w-2 rounded-full bg-white"></div>
                  </div>
                  <span class="text-sm font-semibold text-slate-800">
                    <Icon name="database" class="inline-block mr-2" />
                    Database Cluster
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                  <span class="text-xs text-teal-600 font-medium">Optimized</span>
                </div>
              </div>

              <!-- Tables -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <!-- Users -->
                <div
                  class="bg-white rounded-lg border border-teal-100 p-4 hover:shadow-sm transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="users" class="text-slate-700 w-4 h-4" />
                    <span class="text-sm font-medium text-slate-700">Users</span>
                  </div>
                  <div class="space-y-1 text-xs text-slate-600">
                    <div class="rounded px-2 py-1 bg-slate-50">ID, Name, Email</div>
                    <div class="rounded px-2 py-1 bg-teal-50">1.2K records</div>
                  </div>
                </div>

                <!-- Products -->
                <div
                  class="bg-white rounded-lg border border-teal-100 p-4 hover:shadow-sm transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="products" class="text-slate-700 w-4 h-4" />
                    <span class="text-sm font-medium text-slate-700">Products</span>
                  </div>
                  <div class="space-y-1 text-xs text-slate-600">
                    <div class="rounded px-2 py-1 bg-slate-50">ID, Name, Price</div>
                    <div class="rounded px-2 py-1 bg-teal-50">850 records</div>
                  </div>
                </div>

                <!-- Orders -->
                <div
                  class="bg-white rounded-lg border border-teal-100 p-4 hover:shadow-sm transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="orders" class="text-slate-700 w-4 h-4" />
                    <span class="text-sm font-medium text-slate-700">Orders</span>
                  </div>
                  <div class="space-y-1 text-xs text-slate-600">
                    <div class="rounded px-2 py-1 bg-slate-50">ID, User, Total</div>
                    <div class="rounded px-2 py-1 bg-teal-50">3.4K records</div>
                  </div>
                </div>

                <!-- Analytics -->
                <div
                  class="bg-white rounded-lg border border-teal-100 p-4 hover:shadow-sm transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="barChart" class="text-slate-700 w-4 h-4" />
                    <span class="text-sm font-medium text-slate-700">Analytics</span>
                  </div>
                  <div class="space-y-1 text-xs text-slate-600">
                    <div class="rounded px-2 py-1 bg-slate-50">Events, Metrics</div>
                    <div class="rounded px-2 py-1 bg-teal-50">12K records</div>
                  </div>
                </div>
              </div>

              <!-- Badge -->
              <div class="mt-6 flex justify-center">
                <div
                  class="flex items-center gap-3 bg-teal-50 border border-teal-200 rounded-full px-4 py-2"
                >
                  <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                  <span class="text-xs text-slate-700 font-medium">99.9% Uptime</span>
                  <div class="h-3 w-px bg-slate-300 mx-2"></div>
                  <span class="text-xs text-slate-700 font-medium">&lt;50ms Query</span>
                </div>
              </div>
            </div>

            <!-- Floating Particles -->
            <div class="absolute top-8 -right-4 w-2 h-2 bg-teal-400 rounded-full opacity-60"></div>
            <div class="absolute bottom-8 -left-4 w-3 h-3 bg-teal-400 rounded-full opacity-60"></div>
            <div class="absolute top-1/2 -right-6 w-1.5 h-1.5 bg-teal-400 rounded-full opacity-60">
            </div>
          </div>
        </div>

        <!-- Right: Content and Features -->
        <div class="flex flex-col justify-center">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 md:text-3xl md:leading-tight" >
            {apiDatabaseSection.title}
          </h2>
          <p class="mt-4 sm:mt-6 text-base sm:text-lg leading-relaxed text-slate-700" >
            {apiDatabaseSection.description}
          </p>
          <div class="mt-6 sm:mt-8 flex flex-col gap-3 sm:gap-4">
            {
              apiDatabaseSection.features.map((feature) => (
                <div class="flex items-start gap-2 sm:gap-3">
                  <div class="flex-shrink-0 mt-0.5 w-5 h-5 rounded-full bg-teal-100 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-teal-500" />
                  </div>
                  <p class="text-slate-600 text-sm sm:text-base">{feature}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <section class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20" id="cloud-and-devops-excellence" aria-label="Cloud and DevOps Excellence"  >
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12 lg:gap-16">
        <div class="flex flex-col justify-center">
          <h2 class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight" >
            {cloudDevOpsSection.title}
          </h2>
          <p class="mt-4 sm:mt-6 text-base sm:text-lg leading-relaxed text-pretty text-slate-700" >
            {cloudDevOpsSection.description}
          </p>
          <div class="mt-6 sm:mt-8 flex flex-col gap-3 sm:gap-4">
            {
              cloudDevOpsSection.features.map((feature) => (
                <div class="flex items-start gap-2 sm:gap-3">
                  <div class="flex-shrink-0 mt-0.5 w-5 h-5 rounded-full bg-teal-100 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-teal-500" />
                  </div>
                  <p class="text-slate-600 text-sm sm:text-base">{feature}</p>
                </div>
              ))
            }
          </div>
        </div>

        <div
          class="cloud-devops-container relative w-full max-w-4xl mx-auto grid gap-8 sm:grid-cols-1 md:grid-cols-1"
        >
          <!-- Cloud Infrastructure -->
          <div class="cloud-layer">
            <div class="cloud-platform bg-white rounded-2xl shadow-xl border border-slate-200 p-6">
              <!-- Header -->
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                  <div class="h-3 w-3 rounded-full bg-teal-500"></div>
                  <span class="text-xs font-semibold text-slate-700">Cloud Infrastructure</span>
                </div>
                <div class="flex gap-1">
                  <div class="h-2 w-2 rounded-full bg-slate-300"></div>
                  <div class="h-2 w-2 rounded-full bg-slate-300"></div>
                  <div class="h-2 w-2 rounded-full bg-slate-300"></div>
                </div>
              </div>

              <!-- Services -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <!-- Compute -->
                <div
                  class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg p-3 border border-teal-200 hover:shadow-md transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="server" class="text-teal-500 w-4 h-4" />
                    <span class="text-xs font-medium text-slate-700">Compute</span>
                  </div>
                  <div class="space-y-1">
                    <div class="h-1 w-full bg-teal-700 rounded-full"></div>
                    <div class="h-1 w-3/4 bg-teal-200 rounded-full"></div>
                  </div>
                </div>

                <!-- Storage -->
                <div
                  class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg p-3 border border-teal-200 hover:shadow-md transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="storage" class="text-teal-500 w-4 h-4" />
                    <span class="text-xs font-medium text-slate-700">Storage</span>
                  </div>
                  <div class="space-y-1">
                    <div class="h-1 w-full bg-teal-300 rounded-full"></div>
                    <div class="h-1 w-2/3 bg-teal-200 rounded-full"></div>
                  </div>
                </div>

                <!-- Network -->
                <div
                  class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg p-3 border border-teal-200 hover:shadow-md transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="network" class="text-teal-500 w-4 h-4" />
                    <span class="text-xs font-medium text-slate-700">Network</span>
                  </div>
                  <div class="space-y-1">
                    <div class="h-1 w-full bg-teal-300 rounded-full"></div>
                    <div class="h-1 w-4/5 bg-teal-200 rounded-full"></div>
                  </div>
                </div>

                <!-- Security -->
                <div
                  class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-lg p-3 border border-teal-200 hover:shadow-md transition"
                >
                  <div class="flex items-center gap-2 mb-2">
                    <Icon name="shieldplus" class="text-teal-500 w-4 h-4" />
                    <span class="text-xs font-medium text-slate-700">Security</span>
                  </div>
                  <div class="space-y-1">
                    <div class="h-1 w-full bg-teal-300 rounded-full"></div>
                    <div class="h-1 w-3/5 bg-teal-200 rounded-full"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- DevOps Pipeline -->
          <div
            class="devops-pipeline bg-white rounded-2xl shadow-xl border border-slate-200 p-6 flex flex-col justify-between"
          >
            <div>
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-2">
                  <div class="h-3 w-3 rounded-full bg-teal-500"></div>
                  <span class="text-xs font-semibold text-slate-700">DevOps Pipeline</span>
                </div>
                <div class="text-xs text-slate-500">CI/CD</div>
              </div>

              <div class="pipeline-flow flex flex-wrap items-center justify-between gap-2">
                <!-- Step: Code -->
                <div class="pipeline-step flex flex-col items-center">
                  <div
                    class="step-circle h-8 w-8 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center shadow-md"
                  >
                    <div class="h-3 w-3 rounded-full bg-white"></div>
                  </div>
                  <span class="text-xs text-slate-600 mt-2">Code</span>
                </div>

                <div class="h-0.5 w-12 bg-gradient-to-r from-teal-300 to-teal-300 rounded-full"></div>

                <!-- Step: Build -->
                <div class="pipeline-step flex flex-col items-center">
                  <div
                    class="step-circle h-8 w-8 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center shadow-md"
                  >
                    <div class="h-3 w-3 rounded-full bg-white"></div>
                  </div>
                  <span class="text-xs text-slate-600 mt-2">Build</span>
                </div>

                <div class="h-0.5 w-12 bg-gradient-to-r from-teal-300 to-teal-300 rounded-full"></div>

                <!-- Step: Deploy -->
                <div class="pipeline-step flex flex-col items-center">
                  <div
                    class="step-circle h-8 w-8 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center shadow-md"
                  >
                    <div class="h-3 w-3 rounded-full bg-white"></div>
                  </div>
                  <span class="text-xs text-slate-600 mt-2">Deploy</span>
                </div>
              </div>
            </div>

            <!-- Status -->
            <div class="mt-6 flex justify-center">
              <div
                class="flex items-center gap-2 bg-teal-50 border border-teal-200 rounded-full px-3 py-1"
              >
                <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                <span class="text-xs font-medium text-teal-700">Active Deployment</span>
              </div>
            </div>
          </div>
        </div>
      </div>
