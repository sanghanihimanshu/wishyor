---
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { WithContext, Thing } from "schema-dts";
import { Image } from "astro:assets";
import image_1 from "@images/Cloud.png";
import image_2 from "@images/Cloud.png";
import Cta from "@/components/service/cta.astro";

const platform = {
  title: "AI & Machine Learning Services",
  description:
    "Harness the power of artificial intelligence and machine learning to transform your business operations, enhance customer experiences, and drive data-driven decision making with our cutting-edge AI solutions.",
};

const video =
  "https://vyclk3sx0z.ufs.sh/f/hv6ttNERWpXuOGj0KhIPk5MLw0bimBlYnq6Vd2NfSJW9gCQU";

const predictiveAnalyticsSection = {
  title: "Predictive Analytics & Machine Learning",
  description:
    "Unlock the hidden value in your data with our advanced predictive analytics solutions. We deploy sophisticated machine learning algorithms to identify patterns, forecast trends, and generate actionable insights that drive business growth.",
  features: [
    "Custom predictive models tailored to your business needs",
    "Time series forecasting for inventory and demand planning",
    "Customer segmentation and churn prediction",
    "Anomaly detection and risk assessment",
  ],
};

const nlpChatbotsSection = {
  title: "Chatbots & NLP Solutions",
  description:
    "Enhance customer engagement and operational efficiency with our intelligent conversational AI systems. Our NLP-powered solutions understand context, learn from interactions, and provide personalized experiences at scale.",
  features: [
    "AI-powered virtual assistants with natural language understanding",
    "Sentiment analysis and intent recognition",
    "Knowledge base integration and automated responses",
    "Multi-channel deployment across web, mobile, and messaging platforms",
  ],
};

// SEO metadata
const seo = {
  title: "AI & Machine Learning Services | Predictive Analytics, Chatbots & NLP",
  description:
    "Transform your business with our advanced AI and machine learning solutions. Expert predictive analytics, intelligent chatbots, and NLP systems that drive innovation and growth.",
};

const aiFoundationSection = {
  title: "Enterprise AI Foundation",
  description:
    "We help organizations build robust AI foundations that serve as launchpads for future innovation. Our approach ensures your AI initiatives are scalable, ethical, and aligned with your business objectives.",
};

const modelDevelopment = [
  "Custom ML Models",
  "Transfer Learning",
  "Deep Neural Networks",
  "Reinforcement Learning",
  "Ensemble Methods",
];

const dataOperations = [
  "Data Pipeline Architecture",
  "ETL Process Automation",
  "Feature Engineering",
  "Data Validation",
  "Model Versioning",
];

const aiOperations = [
  "MLOps Implementation",
  "Model Monitoring",
  "Continual Learning",
  "Inference Optimization",
  "Scalable Deployment",
];

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "AI & Machine Learning Services",
  description:
    "Professional AI and machine learning services including predictive analytics, chatbots, NLP solutions, and enterprise AI foundations.",
  provider: {
    "@type": "Organization",
    name: "Wishyor",
    url: `${Astro.site}`,
  },
  areaServed: "Worldwide",
  serviceType: "AI Development",
};

const businessBenefits = {
  title: "Why Invest in AI & ML Solutions",
  benefits: [
    {
      title: "Enhanced Decision Making",
      description: "Leverage data-driven insights to make informed business decisions faster and with greater confidence.",
      icon: "chartBar"
    },
    {
      title: "Operational Efficiency",
      description: "Automate routine tasks and optimize processes to reduce costs and improve productivity.",
      icon: "speedometer"
    },
    {
      title: "Customer Experience",
      description: "Deliver personalized interactions and services that boost customer satisfaction and loyalty.",
      icon: "users"
    },
    {
      title: "Competitive Advantage",
      description: "Stay ahead of the competition by implementing innovative AI solutions that transform your business capabilities.",
      icon: "trophy"
    },
    {
      title: "Scalable Growth",
      description: "Build foundations that easily scale from service-based applications to enterprise-level product offerings.",
      icon: "trendingUp"
    },
    {
      title: "Future-Ready Infrastructure",
      description: "Develop the technological backbone needed to evolve with market demands and emerging opportunities.",
      icon: "rocket"
    }
  ]
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1
          class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
        >
          {platform.title}
        </h1>
        <p
          class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8"
        >
          {platform.description}
        </p>
      </div>

      <div class="relative m-auto w-full pt-16 sm:w-[90%]">
        <div
          class="via-off-white to-off-white pointer-events-none absolute inset-x-0 -bottom-2 z-10 hidden h-1/3 w-full bg-linear-to-b/oklch from-transparent sm:block"
        >
        </div>
        <div class="aspect-video">
          <video
            autoplay
            loop
            muted
            playsinline
            preload="metadata"
            class="aspect-auto rounded-xl"
          >
            <source src={video} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="predictive-analytics"
  >
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {predictiveAnalyticsSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {predictiveAnalyticsSection.description}
        </p>
        <div class="mt-8 flex flex-col gap-4">
          {
            predictiveAnalyticsSection.features.map((feature) => (
              <div class="flex items-center gap-2">
                <Icon name="checkCircle" />
                <p class="text-slate-600">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>
      <div
        class="relative flex flex-col items-center justify-center gap-8 rounded-xl p-6 md:flex-row lg:gap-16"
      >
        <div class="flex items-center justify-center">
          <Image src={image_1} alt="AI Analytics Dashboard" class="rounded-xl shadow-lg" />
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="chatbots-and-nlp"
  >
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="order-last md:order-first">
        <Image src={image_2} alt="AI Chatbot Interface" class="rounded-xl shadow-lg" />
      </div>
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {nlpChatbotsSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {nlpChatbotsSection.description}
        </p>
        <div class="mt-8 flex flex-col gap-4">
          {
            nlpChatbotsSection.features.map((feature) => (
              <div class="flex items-center gap-2">
                <Icon name="checkCircle" />
                <p class="text-slate-600">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-400 px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="enterprise-ai-foundation"
  >
    <div
      class="mt-2 grid grid-cols-1 gap-4 md:grid-cols-2 md:justify-items-end"
    >
      <div>
        <h2
          class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
        >
          {aiFoundationSection.title}
        </h2>
        <p class="mt-6 max-w-3xl text-lg/8 text-pretty text-slate-700">
          {aiFoundationSection.description}
        </p>
      </div>

      <div class="h-full w-full">
        <div
          class="relative flex h-full flex-col justify-center rounded-lg py-8 ring-white/15"
        >
          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--duration:30s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                modelDevelopment.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                modelDevelopment.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>

          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--direction:reverse] [--duration:40s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                dataOperations.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                dataOperations.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>
          <div class="group flex flex-row overflow-hidden p-2">
            <div
              class="animate-scroll flex w-max min-w-full shrink-0 flex-row flex-nowrap justify-around gap-5 [--duration:20s]"
              aria-hidden="true"
            >
              {/* Original items */}
              {
                aiOperations.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }

              {/* Duplicated items for seamless scroll */}
              {
                aiOperations.map((item) => (
                  <div class="flex items-center gap-5 rounded-md bg-white px-4 py-2 text-slate-700 shadow-md ring-1 ring-white/15">
                    {item}
                  </div>
                ))
              }
            </div>
          </div>

          <div
            class="from-off-white pointer-events-none absolute inset-y-0 left-0 w-1/3 bg-gradient-to-r"
          >
          </div>
          <div
            class="from-off-white pointer-events-none absolute inset-y-0 right-0 w-1/3 bg-gradient-to-l"
          >
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
    id="business-benefits"
  >
    <div class="text-center mb-10">
      <h2
        class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight"
      >
        {businessBenefits.title}
      </h2>
    </div>
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        businessBenefits.benefits.map((benefit) => (
          <div class="flex flex-col rounded-lg border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 text-blue-600">
              <Icon name={benefit.icon} />
            </div>
            <h3 class="mb-2 text-xl font-semibold text-slate-800">
              {benefit.title}
            </h3>
            <p class="text-slate-600">
              {benefit.description}
            </p>
          </div>
        ))
      }
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8"
    id="product-vision"
  >
    <div class="rounded-xl bg-gradient-to-r from-blue-50 to-indigo-50 p-8 shadow-sm">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-12">
        <div class="md:col-span-8">
          <h2 class="text-2xl font-semibold tracking-tight text-balance text-slate-800 md:text-3xl md:leading-tight">
            From Services to Products: Our AI Vision
          </h2>
          <p class="mt-4 text-lg text-slate-700">
            We're building more than just AI services—we're creating the foundations for tomorrow's AI product ecosystem. Our roadmap includes developing proprietary AI solutions that can evolve from customized implementations to standalone products, following the path of tech giants like Google.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <div class="flex items-center gap-2">
              <Icon name="checkCircle" />
              <p class="text-slate-600">Scalable architecture that grows with your business</p>
            </div>
            <div class="flex items-center gap-2">
              <Icon name="checkCircle" />
              <p class="text-slate-600">Intellectual property development for future products</p>
            </div>
            <div class="flex items-center gap-2">
              <Icon name="checkCircle" />
              <p class="text-slate-600">Strategic partnership opportunities for market expansion</p>
            </div>
          </div>
        </div>
        <div class="md:col-span-4 flex items-center justify-center">
          <div class="svgBlock relative h-40 w-40 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 flex items-center justify-center">
            <span class="text-white text-6xl font-bold">AI</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Cta />

  <style>
    .svgBlock::after {
      content: "";
      position: absolute;
      inset: 0;
      background-image: url(/guilloche.svg);
      background-repeat: repeat;
      background-position: right top;
      background-size: 20px, 20px;
      opacity: 0.075;
      background-clip: padding-box;
      mask-image: linear-gradient(270deg, rgb(0, 0, 0), rgba(0, 0, 0, 0));
      pointer-events: none;
    }
  </style>
</BaseLayout>
