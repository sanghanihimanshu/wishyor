---
import Cta from "@/components/service/cta.astro";
import BaseLayout from "@layout/BaseLayout.astro";
import Icon from "@ui/icons/Icon.astro";
import type { Thing, WithContext } from "schema-dts";

const platform = {
  title: "AI & Machine Learning Services",
  description:
    "Harness the power of artificial intelligence and machine learning to transform your business operations, enhance customer experiences, and drive data-driven decision making with our cutting-edge AI solutions.",
};

const video = "https://vyclk3sx0z.ufs.sh/f/hv6ttNERWpXuOGj0KhIPk5MLw0bimBlYnq6Vd2NfSJW9gCQU";

const predictiveAnalyticsSection = {
  title: "Predictive Analytics & Machine Learning",
  description:
    "Unlock the hidden value in your data with our advanced predictive analytics solutions. We deploy sophisticated machine learning algorithms to identify patterns, forecast trends, and generate actionable insights that drive business growth.",
  features: [
    "Custom predictive models tailored to your business needs",
    "Time series forecasting for inventory and demand planning",
    "Customer segmentation and churn prediction",
    "Anomaly detection and risk assessment",
  ],
};

const nlpChatbotsSection = {
  title: "Chatbots & NLP Solutions",
  description:
    "Enhance customer engagement and operational efficiency with our intelligent conversational AI systems. Our NLP-powered solutions understand context, learn from interactions, and provide personalized experiences at scale.",
  features: [
    "AI-powered virtual assistants with natural language understanding",
    "Sentiment analysis and intent recognition",
    "Knowledge base integration and automated responses",
    "Multi-channel deployment across web, mobile, and messaging platforms",
  ],
};

// SEO metadata
const seo = {
  title: "AI & Machine Learning Services | Predictive Analytics, Chatbots & NLP",
  description:
    "Transform your business with our advanced AI and machine learning solutions. Expert predictive analytics, intelligent chatbots, and NLP systems that drive innovation and growth.",
};

const aiFoundationSection = {
  title: "Enterprise AI Foundation",
  description:
    "We help organizations build robust AI foundations that serve as launchpads for future innovation. Our approach ensures your AI initiatives are scalable, ethical, and aligned with your business objectives.",
};

const modelDevelopment = [
  "Custom ML Models",
  "Transfer Learning",
  "Deep Neural Networks",
  "Reinforcement Learning",
  "Ensemble Methods",
];

const dataOperations = [
  "Data Pipeline Architecture",
  "ETL Process Automation",
  "Feature Engineering",
  "Data Validation",
  "Model Versioning",
];

const aiOperations = [
  "MLOps Implementation",
  "Model Monitoring",
  "Continual Learning",
  "Inference Optimization",
  "Scalable Deployment",
];

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "AI & Machine Learning Services",
  description:
    "Professional AI and machine learning services including predictive analytics, chatbots, NLP solutions, and enterprise AI foundations.",
  provider: {
    "@type": "Organization",
    name: "Wishyor",
    url: `${Astro.site}`,
  },
  areaServed: "Worldwide",
  serviceType: "AI Development",
};

const businessBenefits = {
  title: "Why Invest in AI & ML Solutions",
  benefits: [
    {
      title: "Enhanced Decision Making",
      description:
        "Leverage data-driven insights to make informed business decisions faster and with greater confidence.",
      icon: "chartBar",
    },
    {
      title: "Operational Efficiency",
      description:
        "Automate routine tasks and optimize processes to reduce costs and improve productivity.",
      icon: "speedometer",
    },
    {
      title: "Customer Experience",
      description:
        "Deliver personalized interactions and services that boost customer satisfaction and loyalty.",
      icon: "users",
    },
    {
      title: "Competitive Advantage",
      description:
        "Stay ahead of the competition by implementing innovative AI solutions that transform your business capabilities.",
      icon: "trophy",
    },
    {
      title: "Scalable Growth",
      description:
        "Build foundations that easily scale from service-based applications to enterprise-level product offerings.",
      icon: "trendingUp",
    },
    {
      title: "Future-Ready Infrastructure",
      description:
        "Develop the technological backbone needed to evolve with market demands and emerging opportunities.",
      icon: "rocket",
    },
  ],
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-7xl">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl">
          {platform.title}
        </h1>
        <p class="mt-8 text-lg font-medium text-pretty text-slate-700 sm:text-xl/8">
          {platform.description}
        </p>
      </div>

      <div class="relative m-auto w-full pt-16 sm:w-[90%]">
        <div
          class="via-off-white to-off-white pointer-events-none absolute inset-x-0 -bottom-2 z-10 hidden h-1/3 w-full bg-linear-to-b/oklch from-transparent sm:block"
        >
        </div>
        <div class="aspect-video">
          <video autoplay loop muted playsinline preload="metadata" class="aspect-auto rounded-xl">
            <source src={video} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-300 px-4 py-12 sm:px-6 md:py-16 lg:px-8 lg:py-20"
    id="predictive-analytics"
  >
    <div class="grid grid-cols-1 gap-10 md:grid-cols-2 md:gap-14 lg:gap-20">
      <!-- Left: Content Section -->
      <div class="flex flex-col justify-center">
        <h2
          class="text-2xl font-semibold tracking-tight text-slate-800 md:text-3xl md:leading-tight"
        >
          {predictiveAnalyticsSection.title}
        </h2>
        <p class="mt-4 sm:mt-6 text-base sm:text-lg leading-relaxed text-slate-700">
          {predictiveAnalyticsSection.description}
        </p>
        <div class="mt-6 sm:mt-8 flex flex-col gap-3 sm:gap-4">
          {
            predictiveAnalyticsSection.features.map((feature) => (
              <div class="flex items-start gap-2 sm:gap-3">
                <div class="flex-shrink-0 mt-0.5 w-5 h-5 rounded-full bg-teal-100 flex items-center justify-center">
                  <div class="w-2 h-2 rounded-full bg-teal-500" />
                </div>
                <p class="text-slate-600 text-sm sm:text-base">{feature}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right: Analytics Visualization -->
      <div>
        <div class="relative w-full max-w-3xl mx-auto">
          <!-- ML Model Performance Dashboard -->
          <div class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6 mb-8">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3">
                <div class="h-4 w-4 rounded-full bg-teal-500 flex items-center justify-center">
                  <div class="h-2 w-2 rounded-full bg-white"></div>
                </div>
                <span class="text-sm font-semibold text-slate-800">ML Model Performance</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                <span class="text-xs text-teal-600 font-medium">Training</span>
              </div>
            </div>

            <!-- Accuracy Chart Simulation -->
            <div class="mb-6">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-slate-700">Model Accuracy</span>
                <span class="text-lg font-bold text-teal-600">94.7%</span>
              </div>
              <div class="w-full bg-slate-200 rounded-full h-3">
                <div
                  class="bg-gradient-to-r from-teal-400 to-teal-600 h-3 rounded-full relative"
                  style="width: 94.7%"
                >
                  <div
                    class="absolute right-0 top-0 h-3 w-3 bg-teal-600 rounded-full transform translate-x-1/2"
                  >
                  </div>
                </div>
              </div>
            </div>

            <!-- Model Metrics Grid -->
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-teal-50 rounded-lg p-4 border border-teal-200">
                <div class="text-2xl font-bold text-teal-600">0.92</div>
                <div class="text-xs text-slate-600 mt-1">Precision Score</div>
              </div>
              <div class="bg-teal-50 rounded-lg p-4 border border-teal-200">
                <div class="text-2xl font-bold text-teal-600">0.89</div>
                <div class="text-xs text-slate-600 mt-1">Recall Score</div>
              </div>
              <div class="bg-teal-50 rounded-lg p-4 border border-teal-200">
                <div class="text-2xl font-bold text-teal-600">0.91</div>
                <div class="text-xs text-slate-600 mt-1">F1 Score</div>
              </div>
              <div class="bg-teal-50 rounded-lg p-4 border border-teal-200">
                <div class="text-2xl font-bold text-teal-600">2.3ms</div>
                <div class="text-xs text-slate-600 mt-1">Inference Time</div>
              </div>
            </div>
          </div>

          <!-- Predictive Models -->
          <div class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3">
                <div class="h-4 w-4 rounded-full bg-teal-500 flex items-center justify-center">
                  <div class="h-2 w-2 rounded-full bg-white"></div>
                </div>
                <span class="text-sm font-semibold text-slate-800">Active Prediction Models</span>
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                <span class="text-xs text-teal-600 font-medium">4 Models</span>
              </div>
            </div>

            <!-- Models Grid -->
            <div class="space-y-4">
              <!-- Customer Churn Model -->
              <div
                class="bg-gradient-to-r from-teal-50 to-teal-100 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <div class="w-3 h-3 rounded-full bg-teal-500"></div>
                    <span class="text-sm font-medium text-slate-700">Customer Churn Prediction</span
                    >
                  </div>
                  <div
                    class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full border border-teal-200"
                  >
                    Active
                  </div>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-slate-600">Random Forest • Accuracy: 91.2%</span>
                  <div class="flex items-center gap-1">
                    <div class="w-2 h-2 bg-teal-400 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-300 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-200 rounded-full"></div>
                  </div>
                </div>
              </div>

              <!-- Demand Forecasting Model -->
              <div
                class="bg-gradient-to-r from-teal-50 to-teal-100 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <div class="w-3 h-3 rounded-full bg-teal-500"></div>
                    <span class="text-sm font-medium text-slate-700">Demand Forecasting</span>
                  </div>
                  <div
                    class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full border border-teal-200"
                  >
                    Active
                  </div>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-slate-600">LSTM Neural Network • MAE: 3.4%</span>
                  <div class="flex items-center gap-1">
                    <div class="w-2 h-2 bg-teal-400 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-300 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-200 rounded-full"></div>
                  </div>
                </div>
              </div>

              <!-- Price Optimization Model -->
              <div
                class="bg-gradient-to-r from-teal-50 to-teal-100 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <div class="w-3 h-3 rounded-full bg-teal-500"></div>
                    <span class="text-sm font-medium text-slate-700">Price Optimization</span>
                  </div>
                  <div
                    class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full border border-teal-200"
                  >
                    Active
                  </div>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-slate-600">Gradient Boosting • R²: 0.87</span>
                  <div class="flex items-center gap-1">
                    <div class="w-2 h-2 bg-teal-400 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-300 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-200 rounded-full"></div>
                  </div>
                </div>
              </div>

              <!-- Anomaly Detection Model -->
              <div
                class="bg-gradient-to-r from-teal-50 to-teal-100 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <div class="w-3 h-3 rounded-full bg-teal-500"></div>
                    <span class="text-sm font-medium text-slate-700">Anomaly Detection</span>
                  </div>
                  <div
                    class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full border border-teal-200"
                  >
                    Active
                  </div>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-slate-600">Isolation Forest • Precision: 95.8%</span>
                  <div class="flex items-center gap-1">
                    <div class="w-2 h-2 bg-teal-400 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-300 rounded-full"></div>
                    <div class="w-2 h-2 bg-teal-200 rounded-full"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- AI Status -->
            <div class="mt-6 flex justify-center">
              <div
                class="flex items-center gap-3 bg-teal-50 border border-teal-200 rounded-full px-4 py-2"
              >
                <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                <span class="text-xs text-slate-700 font-medium">AutoML Pipeline</span>
                <div class="h-3 w-px bg-slate-300 mx-2"></div>
                <span class="text-xs text-slate-700 font-medium">Real-time Predictions</span>
              </div>
            </div>
          </div>

          <!-- Floating Data Points -->
          <div class="absolute top-8 -right-4 w-2 h-2 bg-teal-400 rounded-full opacity-60"></div>
          <div class="absolute bottom-12 -left-4 w-3 h-3 bg-teal-400 rounded-full opacity-60"></div>
          <div class="absolute top-1/3 -right-6 w-1.5 h-1.5 bg-teal-400 rounded-full opacity-60">
          </div>
          <div class="absolute bottom-1/4 left-8 w-2 h-2 bg-teal-400 rounded-full opacity-60"></div>

          <!-- Data Flow Lines -->
          <div
            class="absolute top-1/4 right-12 w-8 h-px bg-gradient-to-r from-transparent via-teal-300 to-transparent opacity-50"
          >
          </div>
          <div
            class="absolute bottom-1/3 left-12 w-6 h-px bg-gradient-to-r from-transparent via-teal-300 to-transparent opacity-50"
          >
          </div>

          <!-- Neural Network Connections -->
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            <div
              class="w-px h-4 bg-gradient-to-b from-teal-300 to-transparent opacity-30 transform rotate-45"
            >
            </div>
            <div
              class="w-px h-4 bg-gradient-to-b from-teal-300 to-transparent opacity-30 transform -rotate-45 absolute top-0"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section
    class="mx-auto max-w-[85rem] border-b border-dashed border-slate-300 px-4 py-12 sm:px-6 md:py-16 lg:px-8 lg:py-20"
    id="chatbots-and-nlp"
  >
    <div class="grid grid-cols-1 gap-10 md:grid-cols-2 md:gap-14 lg:gap-20">
      <!-- Left: NLP Chatbot Visualization -->
      <div class="order-last md:order-first">
        <div class="relative w-full max-w-3xl mx-auto">
          <!-- Chatbot Interface -->
          <div
            class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6 mb-8 relative overflow-hidden"
          >
            <!-- Chat Header -->
            <div class="flex items-center justify-between mb-6 pb-4 border-b border-slate-100">
              <div class="flex items-center gap-3">
                <div
                  class="h-10 w-10 rounded-full bg-gradient-to-br from-teal-400 to-teal-600 flex items-center justify-center"
                >
                  <div class="w-6 h-6 rounded-full bg-white flex items-center justify-center">
                    <div class="w-3 h-3 rounded-full bg-teal-500"></div>
                  </div>
                </div>
                <div>
                  <span class="text-sm font-semibold text-slate-800">AI Assistant</span>
                  <div class="flex items-center gap-2 mt-1">
                    <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                    <span class="text-xs text-teal-600 font-medium">Online</span>
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <div class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full">NLP v3.2</div>
              </div>
            </div>

            <!-- Chat Messages -->
            <div class="space-y-4 mb-6">
              <!-- User Message -->
              <div class="flex justify-end">
                <div class="bg-teal-500 text-white rounded-2xl rounded-tr-md px-4 py-3 max-w-xs">
                  <p class="text-sm">What's the weather like today?</p>
                  <span class="text-xs opacity-75 mt-1 block">2:34 PM</span>
                </div>
              </div>

              <!-- Bot Response -->
              <div class="flex justify-start">
                <div
                  class="bg-slate-100 text-slate-800 rounded-2xl rounded-tl-md px-4 py-3 max-w-xs"
                >
                  <p class="text-sm">
                    Based on current data, it's 72°F with partly cloudy skies. Perfect weather for
                    outdoor activities!
                  </p>
                  <span class="text-xs text-slate-500 mt-1 block">2:34 PM</span>
                </div>
              </div>

              <!-- User Message -->
              <div class="flex justify-end">
                <div class="bg-teal-500 text-white rounded-2xl rounded-tr-md px-4 py-3 max-w-xs">
                  <p class="text-sm">Can you help me plan my day?</p>
                  <span class="text-xs opacity-75 mt-1 block">2:35 PM</span>
                </div>
              </div>

              <!-- Bot Typing Indicator -->
              <div class="flex justify-start">
                <div class="bg-slate-100 text-slate-800 rounded-2xl rounded-tl-md px-4 py-3">
                  <div class="flex items-center gap-1">
                    <div class="w-2 h-2 bg-teal-500 rounded-full animate-bounce"></div>
                    <div
                      class="w-2 h-2 bg-teal-500 rounded-full animate-bounce"
                      style="animation-delay: 0.1s;"
                    >
                    </div>
                    <div
                      class="w-2 h-2 bg-teal-500 rounded-full animate-bounce"
                      style="animation-delay: 0.2s;"
                    >
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Input Area -->
            <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-xl">
              <div class="flex-1 bg-white rounded-lg px-3 py-2 border border-slate-200">
                <span class="text-sm text-slate-400">Type your message...</span>
              </div>
              <button class="bg-teal-500 text-white p-2 rounded-lg hover:bg-teal-600 transition">
                <div class="w-4 h-4 flex items-center justify-center">
                  <div
                    class="w-0 h-0 border-l-[6px] border-l-white border-t-[3px] border-t-transparent border-b-[3px] border-b-transparent"
                  >
                  </div>
                </div>
              </button>
            </div>
          </div>

          <!-- NLP Processing Layer -->
          <div class="bg-white rounded-2xl shadow-xl border border-teal-100 p-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3">
                <div class="h-4 w-4 rounded-full bg-teal-500 flex items-center justify-center">
                  <div class="h-2 w-2 rounded-full bg-white"></div>
                </div>
                <span class="text-sm font-semibold text-slate-800">Natural Language Processing</span
                >
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-full bg-teal-500"></div>
                <span class="text-xs text-teal-600 font-medium">Processing</span>
              </div>
            </div>

            <!-- NLP Components -->
            <div class="grid grid-cols-2 gap-4">
              <!-- Intent Recognition -->
              <div
                class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-slate-700">Intent Recognition</span>
                  <div class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full">98.5%</div>
                </div>
                <div class="space-y-2">
                  <div class="flex justify-between text-xs">
                    <span class="text-slate-600">Weather Query</span>
                    <span class="text-teal-600 font-medium">High</span>
                  </div>
                  <div class="w-full bg-teal-200 rounded-full h-1.5">
                    <div class="bg-teal-500 h-1.5 rounded-full w-[95%]"></div>
                  </div>
                </div>
              </div>

              <!-- Entity Extraction -->
              <div
                class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-slate-700">Entity Extraction</span>
                  <div class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full">96.2%</div>
                </div>
                <div class="space-y-2">
                  <div class="flex justify-between text-xs">
                    <span class="text-slate-600">Location: Today</span>
                    <span class="text-teal-600 font-medium">Found</span>
                  </div>
                  <div class="w-full bg-teal-200 rounded-full h-1.5">
                    <div class="bg-teal-500 h-1.5 rounded-full w-[92%]"></div>
                  </div>
                </div>
              </div>

              <!-- Sentiment Analysis -->
              <div
                class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-slate-700">Sentiment Analysis</span>
                  <div class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full">
                    Positive
                  </div>
                </div>
                <div class="space-y-2">
                  <div class="flex justify-between text-xs">
                    <span class="text-slate-600">Confidence</span>
                    <span class="text-teal-600 font-medium">87.3%</span>
                  </div>
                  <div class="w-full bg-teal-200 rounded-full h-1.5">
                    <div class="bg-teal-500 h-1.5 rounded-full w-[87%]"></div>
                  </div>
                </div>
              </div>

              <!-- Context Understanding -->
              <div
                class="bg-teal-50 rounded-lg p-4 border border-teal-200 hover:shadow-md transition"
              >
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-slate-700">Context Understanding</span>
                  <div class="px-2 py-1 bg-teal-100 text-teal-700 text-xs rounded-full">Active</div>
                </div>
                <div class="space-y-2">
